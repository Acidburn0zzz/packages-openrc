# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="apache"

pkgname=${_rn}-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "${_rn}")
provides=('openrc-web')
install=${_rn}.install
source=("http://dev.gentoo.org/~patrick/dist/${_rn}/gentoo-${_rn}-2.4.4-20130227.tar.bz2")
sha256sums=('cf27447dc87b4c145e50a6850245e3ed8d350bc3500bb249035322b23d03ccd2')

package() {

	 install -Dm755 "${srcdir}/gentoo-apache-2.4.4/init/apache2.confd" "${pkgdir}/etc/conf.d/httpd"
	 
	 sed -e 's|#!/sbin/runscript|#!/usr/sbin/runscript|' -i "${srcdir}/gentoo-apache-2.4.4/init/apache2.initd"
	 
	 install -Dm755 "${srcdir}/gentoo-apache-2.4.4/init/apache2.initd" "${pkgdir}/etc/init.d/httpd"
	 
}

