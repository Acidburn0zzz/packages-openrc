# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="bluez"
_ver=20130325

pkgname=${_rn}-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-misc')
depends=('openrc' "${_rn}")
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")
sha256sums=('b1661ad2a8502fa158e93ac64fde621768988a707aabdab8458fd12a7fa69589')

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/rfcomm-conf.d" "$pkgdir/etc/conf.d/rfcomm"
	install -Dm755 "$srcdir/${_rn}/init.d/rfcomm-init.d" "$pkgdir/etc/init.d/rfcomm"
	install -Dm755 "$srcdir/${_rn}/init.d/bluetooth-init.d-r2" "$pkgdir/etc/init.d/bluetooth"
}
