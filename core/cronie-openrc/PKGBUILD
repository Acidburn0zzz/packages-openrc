# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="cronie"
_ver=20130325

pkgname=${_rn}-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "${_rn}")
provides=('openrc-cron')
conflicts=('dcron-openrc' 'fcron-openrc')
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/init.d/cronie-1.3-initd" "$pkgdir/etc/init.d/${_rn}"
}
sha256sums=('bb0c3d48a4d4d0b97f9d6362316407706e1308f37b48a51dac50d8453be17f44')
sha256sums=('bb0c3d48a4d4d0b97f9d6362316407706e1308f37b48a51dac50d8453be17f44')
