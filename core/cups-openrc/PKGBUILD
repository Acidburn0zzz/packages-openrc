# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="cups"
_ver=20130325

pkgname=${_rn}-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-misc')
depends=('openrc' "${_rn}")
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/init.d/cupsd.init.d" "$pkgdir/etc/init.d/cupsd"
}
sha256sums=('67b1e04a986e4c04e70957907bebe1c5974af01671412d6149d3ab400fab4b46')
