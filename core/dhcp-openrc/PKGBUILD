# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="dhcp"
_ver=20130325

pkgname=${_rn}-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "${_rn}")
provides=('openrc-dhcp')
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/dhcpd.conf2" "$pkgdir/etc/conf.d/dhcpd"
	install -Dm755 "$srcdir/${_rn}/conf.d/dhcrelay6.conf" "$pkgdir/etc/conf.d/dhcrelay"
	install -Dm755 "$srcdir/${_rn}/init.d/dhcpd.init5" "$pkgdir/etc/init.d/dhcpd"
	install -Dm755 "$srcdir/${_rn}/init.d/dhcrelay.init3" "$pkgdir/etc/init.d/dhcrelay"
}
sha256sums=('93a6af97e7c3ca68e1d3613f9a624f1e08c6d6b84ad2b3653b852968f719576b')
