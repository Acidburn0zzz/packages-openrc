# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="dhcpcd"
_ver=20130325

pkgname=${_rn}-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "${_rn}")
provides=('openrc-dhcp')
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/init.d/dhcpcd.initd-1" "$pkgdir/etc/init.d/dhcpcd"
}
sha256sums=('0a3e7b45030977e5fa67f81f0129741419547abb180e116fe83360cf8a9003ea')
