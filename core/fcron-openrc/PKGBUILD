# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="fcron"
_ver=20130325

pkgname=${_rn}-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "${_rn}")
provides=('openrc-cron')
conflicts=('cronie-openrc' 'dcron-openrc')
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/init.d/fcron.init.3" "$pkgdir/etc/init.d/${_rn}"
}
sha256sums=('c12ae7495f896cec1523983c0b0e5521ee2741fe06b7dd68baf2ba9bdffd81cf')
