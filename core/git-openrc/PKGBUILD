# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="git"
_ver=20130325

pkgname=${_rn}-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-server')
depends=('openrc' "${_rn}")
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/git-daemon.confd" "$pkgdir/etc/conf.d/git-daemon"
	install -Dm755 "$srcdir/${_rn}/init.d/git-daemon.initd" "$pkgdir/etc/init.d/git-daemon"
}
sha256sums=('dbb64953cf39d6e997211f66de0985c11925034a976782b165a479682aa367e4')
