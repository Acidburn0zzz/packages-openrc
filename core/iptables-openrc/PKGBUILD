# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=iptables

pkgname=$_rn-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-misc')
depends=('openrc' "$_rn")
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
	install -Dm755 "$srcdir/$_pn-$pkgver/$_rn/conf.d/iptables-1.4.13.confd" "$pkgdir/etc/conf.d/iptables"
	install -Dm755 "$srcdir/$_pn-$pkgver/$_rn/init.d/iptables-1.4.13-r1.init" "$pkgdir/etc/init.d/iptables"
	install -Dm755 "$srcdir/$_pn-$pkgver/$_rn/conf.d/ip6tables-1.4.13.confd" "$pkgdir/etc/conf.d/ip6tables"
	install -Dm755 "$srcdir/$_pn-$pkgver/$_rn/init.d/iptables-1.4.13-r1.init" "$pkgdir/etc/init.d/ip6tables"
}
sha256sums=('3887e0a3dceae9bff4f1ccb180d76391d0420fd711e2607d4cabaafe57ddc716')
