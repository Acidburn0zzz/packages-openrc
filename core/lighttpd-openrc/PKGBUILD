# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="lighttpd"
_ver=20130325

pkgname=${_rn}-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "${_rn}")
provides=('openrc-web')
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/lighttpd.confd" "$pkgdir/etc/conf.d/lighttpd"
	install -Dm755 "$srcdir/${_rn}/init.d/lighttpd.initd" "$pkgdir/etc/init.d/lighttpd"
}
sha256sums=('76629ec9e525423a203bcccdce236b5ffa410bb160bb669a7a06fa023db812b3')
