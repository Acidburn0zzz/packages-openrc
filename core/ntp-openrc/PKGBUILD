# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="ntp"
_ver=20130325

pkgname=${_rn}-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "${_rn}")
provides=('openrc-timed')
conflicts=('openntpd-openrc')
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/ntpd.confd" "$pkgdir/etc/conf.d/ntpd"
	install -Dm755 "$srcdir/${_rn}/init.d/ntpd.rc" "$pkgdir/etc/init.d/ntpd"
	
	install -Dm755 "$srcdir/${_rn}/conf.d/ntp-client.confd" "$pkgdir/etc/conf.d/ntp-client"
	install -Dm755 "$srcdir/${_rn}/init.d/ntp-client.rc" "$pkgdir/etc/init.d/ntp-client"
}
sha256sums=('a2699b0b7bcd74f8675c0eebe327fd4aa236f3e527e203db5cbc2b17218d29e5')
