# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="polipo"
_ver=20130325

pkgname=${_rn}-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "${_rn}")
provides=('openrc-proxy')
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/init.d/polipo.initd" "$pkgdir/etc/init.d/polipo"
}
sha256sums=('b5f77932e53d4d7c579c63a678988178f9b141a5271f2449ed05b7bd583c7c3c')
