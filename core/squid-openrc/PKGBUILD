# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="squid"
_ver=20130325

pkgname=${_rn}-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "${_rn}")
provides=('openrc-proxy')
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/squid.confd-r1" "$pkgdir/etc/conf.d/squid"
	install -Dm755 "$srcdir/${_rn}/init.d/squid.initd-r3" "$pkgdir/etc/init.d/squid"
}
sha256sums=('58f4685fbdc002cb9c397b3dd8f181b0097770541673d2391677b0a2d39a7567')
