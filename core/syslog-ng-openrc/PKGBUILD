# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="syslog-ng"
_ver=20130325

pkgname=${_rn}-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "${_rn}")
provides=('openrc-syslog')
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/syslog-ng.confd" "$pkgdir/etc/conf.d/syslog-ng"
	install -Dm755 "$srcdir/${_rn}/init.d/syslog-ng.rc6.3" "$pkgdir/etc/init.d/syslog-ng"
}
sha256sums=('0e2fb1d0412019c9049ae9b570d2ebe4aa6632cba73fc76c3b4daa38ecb21f37')
