_spkgrel=5
_y=2015
_m=04
_d=26
_url=http://seblu.net/a/arm/$_y/$_m/$_d/core/os
_repo=http://arch.packages.gnp-tec.net/testing/os

pkgname=eudev-systemdcompat
pkgver=220
pkgrel=1
pkgdesc="systemd client libraries without udev; systemd compatibility package"
arch=('i686' 'x86_64')
license=('GPL2')
groups=('eudev-base')
url="http://www.freedesktop.org/wiki/Software/systemd"
provides=("libsystemd=${pkgver}"
            "systemd=${pkgver}"
            "systemd-tools=${pkgver}"
            'libsystemd.so'
            'libsystemd-daemon.so'
            'libsystemd-id128.so'
            'libsystemd-journal.so'
            'libsystemd-login.so')
depends=('glib2' 'glibc' 'libgcrypt' 'xz' 'eudev>=1.10')
optdepends=('eudev-openrc: eudev initscript'
            'upower-pm-utils: pm-utils support')
conflicts=('systemd'
			'systemd-tools'
			'libsystemd'
			'openrc-systemdcompat')
replaces=('openrc-systemdcompat')

