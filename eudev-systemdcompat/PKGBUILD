if [ "$CARCH" = "i686" ]; then
    source=("$_repo/i686/libsystemd-$pkgver-${_spkgrel}-i686.pkg.tar.xz"
			"$_repo/i686/systemd-$pkgver-${_spkgrel}-i686.pkg.tar.xz")
	sha256sums=('e0bacb3cb9c117aa6ced26f81ad8f3d132f372a1ede3953207a4805aef5da778'
            '8344b53422bf79a2a9b5725946af1e3da77175815dd7b830b25361c808cda5e4')
elif [ "$CARCH" = "x86_64" ]; then
    source=("$_repo/x86_64/libsystemd-$pkgver-${_spkgrel}-x86_64.pkg.tar.xz"
			"$_repo/x86_64/systemd-$pkgver-${_spkgrel}-x86_64.pkg.tar.xz")
	sha256sums=('1a6f018444c5d823e63985bf65e08136f4c3e58fc4f4df759914ea813416d285'
            '142f52bd991d4f059b707626c9538a0256966d0a53d9faa1b1b2d5fe8f01a849')
