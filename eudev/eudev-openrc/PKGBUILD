# Maintainer: udeved <udeved@openrc4arch.site40.net>

_name="eudev"
_cat="sys-fs"
_gentoo_uri="http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/${_cat}/${_name}/files"

pkgname=${_name}-openrc
pkgver=20131014
pkgrel=1
pkgdesc="OpenRC ${_name} postmount script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('BSD')
groups=('openrc-base')
depends=('openrc' "${_name}")
install=${_name}.install
source=("${_gentoo_uri}/udev-postmount")

pkgver() {
  date +%Y%m%d
}

package() {
  install -Dm755 "${srcdir}/udev-postmount" "${pkgdir}/etc/init.d/udev-postmount"
  _fix_init "${pkgdir}/etc/init.d/udev-postmount"
}

_fix_init(){
  sed -e 's|#!/sbin/runscript|#!/usr/bin/runscript|' -i $1
}
sha256sums=('0220e949b1f31832a205021c0a8615e77b27b73b7c9b16ef4a61bbd2774aeecb')
