# $Id: PKGBUILD 191823 2013-07-31 08:40:59Z jgc $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=upower-eudev
pkgver=0.9.21
pkgrel=1
pkgdesc="Abstraction for enumerating power devices, listening to device events and querying history and statistics"
arch=('i686' 'x86_64')
url="http://upower.freedesktop.org"
license=('GPL')
depends=('udev' 'libusb' 'polkit-consolekit' 'dbus-glib' 'libimobiledevice' 'pm-utils')
makedepends=('intltool' 'docbook-xsl' 'gobject-introspection' 'systemd')
provides=('upower')
conflicts=('upower')
options=('!libtool')
source=($url/releases/upower-$pkgver.tar.xz)
md5sums=('1aa2b9e6fd757cd151bbaa4991eacc18')

build() {
  cd "upower-$pkgver"

  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libexecdir=/usr/lib/upower \
    --disable-static
  make
}

package() {
  cd "upower-$pkgver"
  make DESTDIR="$pkgdir" install
}
