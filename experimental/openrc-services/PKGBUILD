		"${_gentoo_uri}/net-wireless/wpa_supplicant/files/${_Cwpa}"
		"${_gentoo_uri}/net-wireless/wpa_supplicant/files/${_Iwpa}"
		"${_gentoo_uri}/net-wireless/wpa_supplicant/files/${_Swpa}"
		"${_gentoo_uri}/sys-apps/xinetd/files/${_Cxinet}"
		"${_gentoo_uri}/sys-apps/xinetd/files/${_Ixinet}"
		"${_gentoo_uri}/net-nds/ypbind/files/${_Cypbind}"
		"${_gentoo_uri}/net-nds/ypbind/files/${_Iypbind}"
		"${_gentoo_uri}/net-nds/ypserv/files/${_Cypserv1}"
		"${_gentoo_uri}/net-nds/ypserv/files/${_Cypserv2}"
		"${_gentoo_uri}/net-nds/ypserv/files/${_Cypserv3}"
		"${_gentoo_uri}/net-nds/ypserv/files/${_Iypserv1}"
		"${_gentoo_uri}/net-nds/ypserv/files/${_Iypserv2}"
		"${_gentoo_uri}/net-nds/ypserv/files/${_Iypserv3}"
		"${_gentoo_uri}/net-fs/autofs/files/${_Iautofs}"
		"${_gentoo_uri}/net-misc/openvpn/files/${_Cvpn}"
		"${_gentoo_uri}/net-misc/openvpn/files/${_Ivpn}"
		"${_gentoo_uri}/net-misc/openntpd/files/${_Cntp}"
		"${_gentoo_uri}/net-misc/openntpd/files/${_Intp}"
		'avahi-daemon' 'avahi-dnsconfd'
		'inetutils.confd' 'inetutils.initd'
		"${_ap_uri}/gentoo-apache-${_apver}-${_aprel}.tar.bz2"
		"${_pgs_uri}/postgresql-initscript-${_pgs_ver}.tbz2")


pkgver() {
  date +%Y%m%d
}

_sb='s|#!/sbin/runscript|#!/usr/bin/runscript|'
_run='s|/var/run|/run|g'
_bin=('s|/usr/sbin|/usr/bin|g' 's|/sbin|/usr/bin|g')

package(){
	local _p1 _p2

	if (( ${_use_acpi} ));then
		install -Dm755 "${srcdir}/${_Cacpi}" "${pkgdir}/etc/conf.d/acpid"
		install -Dm755 "${srcdir}/${_Iacpi}" "${pkgdir}/etc/init.d/acpid"
		sed -e "${_sb}" -e "${_bin[0]}" -i "${pkgdir}/etc/init.d/acpid"
	fi

	if (( ${_use_alsa} ));then
		install -Dm755 "${srcdir}/${_Calsa}" "${pkgdir}/etc/conf.d/alsasound"
		install -Dm755 "${srcdir}/${_Ialsa}" "${pkgdir}/etc/init.d/alsasound"
		sed -e "${_sb}" -i "${pkgdir}/etc/init.d/alsasound"
	fi

	if (( ${_use_avahi} ));then
		install -Dm755 "${srcdir}/avahi-daemon" "${pkgdir}/etc/init.d/avahi-daemon"
		install -Dm755 "${srcdir}/avahi-dnsconfd" "${pkgdir}/etc/init.d/avahi-dnsconfd"
	fi

	if (( ${_use_ck} ));then
		install -Dm755 "$srcdir/${_Sck}" "$pkgdir/etc/X11/xinit/xinitrc.d/90-consolekit"
		install -Dm755 "$srcdir/${_Ick}" "$pkgdir/etc/init.d/consolekit"
		sed -e "${_sb}" -e "${_run}" -e "${_bin[0]}" -i "${pkgdir}/etc/init.d/consolekit"
	fi

	if (( ${_use_gpm} ));then
		install -Dm755 "${srcdir}/${_Cgpm}" "${pkgdir}/etc/conf.d/gpm"
		install -Dm755 "${srcdir}/${_Igpm}" "${pkgdir}/etc/init.d/gpm"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/gpm"
	fi

	if (( ${_use_xdm} ));then
		install -Dm755 "${srcdir}/${_Cxdm}" "${pkgdir}/etc/conf.d/xdm"
		install -Dm755 "${srcdir}/${_Ixdm1}" "${pkgdir}/etc/init.d/xdm"
		install -Dm755 "${srcdir}/${_Ixdm2}" "${pkgdir}/etc/init.d/xdm-setup"
		install -Dm755 "${srcdir}/${_Sxdm}" "${pkgdir}/etc/X11/startDM.sh"
		_p1='s|/etc/profile.env|/etc/profile|g' _p2='s|{ROOTPATH}|{PATH}|g'
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -e "${_p1}" -e "${_p2}" -i "${pkgdir}/etc/init.d/xdm"
		sed -e "${_sb}" -i "${pkgdir}/etc/init.d/xdm-setup"
	fi

	if (( ${_use_git} ));then
		install -Dm755 "${srcdir}/${_Cgit}" "${pkgdir}/etc/conf.d/git-daemon"
		install -Dm755 "${srcdir}/${_Igit}" "${pkgdir}/etc/init.d/git-daemon"
		_p1='s|/var/git|/srv/git|'
		sed -e "${_p1}" -i "${pkgdir}/etc/conf.d/git-daemon"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/git-daemon"
	fi

	if (( ${_use_mysql} ));then
		install -Dm755 "${srcdir}/${_Cmy}" "${pkgdir}/etc/conf.d/mysql"
		install -Dm755 "${srcdir}/${_Imy}" "${pkgdir}/etc/init.d/mysql"
		_p1='s|/sbin/mysqld|/bin/mysqld|g'
		sed -e "${_sb}" -e "${_p1}" -i "${pkgdir}/etc/init.d/mysql"
	fi

	if (( ${_use_svn} ));then
		install -Dm755 "${srcdir}/${_Csvn}" "${pkgdir}/etc/conf.d/svnserve-rc"
		install -Dm755 "${srcdir}/${_Isvn}" "${pkgdir}/etc/init.d/svnserve-rc"
		_p1='s|/var/svn|/srv/svn|g'
		sed -e "${_p1}" -i ${pkgdir}/etc/conf.d/svnserve-rc
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -e "${_p1}" -i "${pkgdir}/etc/init.d/svnserve-rc"
	fi

	if (( ${_use_pgsql} ));then
		install -Dm755 "${srcdir}/postgresql.confd" "${pkgdir}/etc/conf.d/postgresql"
		install -Dm755 "${srcdir}/postgresql.init" "${pkgdir}/etc/init.d/postgresql"
		_p1='s|/var/lib/postgresql/@SLOT@/data|/var/lib/postgres/data|'
		_p2='s|/etc/postgresql-@SLOT@/|/var/lib/postgres/data|'
		sed -e "${_p1}" -e "${_p2}" -i "${pkgdir}/etc/conf.d/postgresql"
		_p1='s|/usr/lib/postgresql-@SLOT@/bin/pg_ctl|/usr/bin/pg_ctl|'
		_p2='s|/usr/lib/postgresql-@SLOT@/bin/postgres|/usr/bin/postgres|'
		sed -e "${_sb}" -e "${_p1}" -e "${_p2}" -i "${pkgdir}/etc/init.d/postgresql"
	fi

	if (( ${_use_cronie} ));then
		install -Dm755 "${srcdir}/${_Icron1}" "${pkgdir}/etc/init.d/cronie"
		install -Dm755 "${srcdir}/${_Icron2}" "${pkgdir}/etc/init.d/anacron"
		for f in ${pkgdir}/etc/init.d/*;do
			sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i $f
		done
	fi

	if (( ${_use_fcron} ));then
		install -Dm755 "${srcdir}/${_Ifrcon}" "${pkgdir}/etc/init.d/fcron"
		_p1='s|/usr/libexec|/usr/bin|g'
		sed -e "${_sb}" -e "${_run}" -e "${_p1}" -i "${pkgdir}/etc/init.d/fcron"
	fi

	if (( ${_use_fuse} ));then
		install -Dm755 "${srcdir}/${_Ifuse}" "${pkgdir}/etc/init.d/fuse"
		sed -e "${_sb}" -i "${pkgdir}/etc/init.d/fuse"
	fi

	if (( ${_use_laptop} ));then
		install -Dm755 "${srcdir}/${_Ilap}" "${pkgdir}/etc/init.d/laptop_mode"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/laptop_mode"
	fi

	if (( ${_use_metalog} ));then
		install -Dm755 "${srcdir}/${_Cmeta}" "${pkgdir}/etc/conf.d/metalog"
		install -Dm755 "${srcdir}/${_Imeta}" "${pkgdir}/etc/init.d/metalog"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/metalog"
	fi

	if (( ${_use_rsyslog} ));then
		install -Dm755 "${srcdir}/${_Crsysl}" "${pkgdir}/etc/conf.d/rsyslog"
		install -Dm755 "${srcdir}/${_Irsysl}" "${pkgdir}/etc/init.d/rsyslog"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/rsyslog"
	fi

	if (( ${_use_syslog_ng} ));then
		install -Dm755 "${srcdir}/${_Csyslog}" "${pkgdir}/etc/conf.d/syslog-ng"
		install -Dm755 "${srcdir}/${_Isyslog}" "${pkgdir}/etc/init.d/syslog-ng"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/syslog-ng"
	fi

	if (( ${_use_sane} ));then
		install -Dm755 "${srcdir}/${_Csane}" "${pkgdir}/etc/conf.d/saned"
		install -Dm755 "${srcdir}/${_Isane}" "${pkgdir}/etc/init.d/saned"
		sed -e "${_sb}" -e "${_run}" -e "${_bin[0]}" -i ${pkgdir}/etc/init.d/saned
	fi

	if (( ${_use_lirc} ));then
		install -Dm755 "${srcdir}/${_Clirc1}" "${pkgdir}/etc/conf.d/lircd"
		install -Dm755 "${srcdir}/${_Ilirc1}" "${pkgdir}/etc/init.d/lircd"
		install -Dm755 "${srcdir}/${_Clirc2}" "${pkgdir}/etc/conf.d/irexec"
		install -Dm755 "${srcdir}/${_Ilirc2}" "${pkgdir}/etc/init.d/irexec"
		install -Dm755 "${srcdir}/${_Ilirc3}" "${pkgdir}/etc/init.d/lircmd"
		for f in ${pkgdir}/etc/init.d/*;do
			sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i $f
		done
	fi

	if (( ${_use_cpupower} ));then
		install -Dm755 "${srcdir}/${_Ccpu}" "${pkgdir}/etc/conf.d/cpupower"
		install -Dm755 "${srcdir}/${_Icpu}" "${pkgdir}/etc/init.d/cpupower"
		sed -e "${_sb}" -i "${pkgdir}/etc/init.d/cpupower"
	fi

	if (( ${_use_crypt} ));then
		install -Dm755 "${srcdir}/${_Ccrypt}" "${pkgdir}/etc/conf.d/dmcrypt"
		install -Dm755 "${srcdir}/${_Icrypt}" "${pkgdir}/etc/init.d/dmcrypt"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/dmcrypt"
	fi

	if (( ${_use_dbus}  ));then
		install -Dm755 "${srcdir}/${_Idbus}" "${pkgdir}/etc/init.d/dbus"
		_p1='s|dbus.pid|dbus/pid|g'
		sed -e "${_sb}" -e "${_run}" -e "${_p1}" -i "${pkgdir}/etc/init.d/dbus"
	fi

	if (( ${_use_device_mapper} ));then
		install -Dm755 "${srcdir}/${_Cdm}" "${pkgdir}/etc/conf.d/device-mapper"
		install -Dm755 "${srcdir}/${_Idm1}" "${pkgdir}/etc/init.d/device-mapper"
		install -Dm755 "${srcdir}/${_Idm2}" "${pkgdir}/etc/init.d/dmeventd"
		for f in ${pkgdir}/etc/init.d/*;do
			sed -e "${_sb}" -e "${_bin[1]}" -e "${_run}" -i $f
		done
	fi

	if (( ${_use_lvm2} ));then
		install -Dm755 "${srcdir}/${_Clvm}" "${pkgdir}/etc/conf.d/lvm"
		install -Dm755 "${srcdir}/${_Ilvm1}" "${pkgdir}/etc/init.d/lvm"
		install -Dm755 "${srcdir}/${_Ilvm2}" "${pkgdir}/etc/init.d/lvm-monitoring"
		for f in ${pkgdir}/etc/init.d/*;do
			sed -e "${_sb}" -e "${_bin[1]}" -e "${_run}" -i $f
		done
	fi

	if (( ${_use_glibc} ));then
		install -Dm755 "${srcdir}/${_Inscd}" "${pkgdir}/etc/init.d/nscd"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/nscd"
	fi

	if (( ${_use_sensors} ));then
		install -Dm755 "${srcdir}/${_Csens}" "${pkgdir}/etc/conf.d/sensord"
		install -Dm755 "${srcdir}/${_Isens1}" "${pkgdir}/etc/init.d/sensord"
		install -Dm755 "${srcdir}/${_Isens2}" "${pkgdir}/etc/init.d/fancontrol"
		install -Dm755 "${srcdir}/${_Isens3}" "${pkgdir}/etc/init.d/lm_sensors"
		for f in ${pkgdir}/etc/init.d/*;do
			sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i $f
		done
	fi

	if (( ${_use_mdadm} ));then
		install -Dm755 "${srcdir}/${_Cmdadm}" "${pkgdir}/etc/conf.d/mdadm"
		install -Dm755 "${srcdir}/${_Imdadm}" "${pkgdir}/etc/init.d/mdadm"
		sed -e "${_sb}" -e "${_run}" -i "${pkgdir}/etc/init.d/mdadm"
	fi

	if (( ${_use_apache} ));then
		local _p3 _p4 _p5 _p6 _p7 _p8
		install -Dm755 "${srcdir}/gentoo-apache-${_apver}/init/apache2.confd" "${pkgdir}/etc/conf.d/httpd"
		install -Dm755 "${srcdir}/gentoo-apache-${_apver}/init/apache2.initd" "${pkgdir}/etc/init.d/httpd"
		_p1='s|/usr/sbin/apache2|/usr/bin/apachectl|'
		_p2='s|/etc/apache2/httpd.conf|/etc/httpd/conf/httpd.conf|'
		_p3='s/! test -f/test -f/'
		_p4='s|/usr/lib/apache2|/usr/lib/httpd|'
		_p5='s|apache2.pid|httpd/httpd.pid|'
		_p6='s|apache2 >/dev/null|httpd >/dev/null|'
		_p7='s|apache2|httpd|g'
		_p8='s|/run/apache_ssl_mutex|/run/httpd|'
		sed -e "${_sb}" -e "${_p1}" -e "${_p2}" -e "${_p3}" -e "${_p4}" -e "${_p5}" -e "${_p6}" -e "${_p8}" -i "${pkgdir}/etc/init.d/httpd"
		sed  -e "${_p2}" -e "${_p4}" -e "${_p5}" -e "${_p7}" -i "${pkgdir}/etc/conf.d/httpd"
	fi

	if (( ${_use_autofs} ));then
		install -Dm755 "${srcdir}/${_Iautofs}" "${pkgdir}/etc/init.d/autofs"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/autofs"
	fi

	if (( ${_use_bind} ));then
		install -Dm755 "${srcdir}/${_Cbind}" "${pkgdir}/etc/conf.d/named"
		install -Dm755 "${srcdir}/${_Ibind}" "${pkgdir}/etc/init.d/named"
		_p1='s|/etc/bind/named.conf|/etc/named.conf|g'
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -e "${_p1}" -i "${pkgdir}/etc/init.d/named"
	fi

	if (( ${_use_bitlbee} ));then
		install -Dm755 "${srcdir}/${_Cbit}" "${pkgdir}/etc/conf.d/bitlbee"
		install -Dm755 "${srcdir}/${_Ibit}" "${pkgdir}/etc/init.d/bitlbee"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/bitlbee"
	fi

	if (( ${_use_bluetooth} ));then
		install -Dm755 "${srcdir}/${_Cblue}" "${pkgdir}/etc/conf.d/rfcomm"
		install -Dm755 "${srcdir}/${_Iblue1}" "${pkgdir}/etc/init.d/rfcomm"
		install -Dm755 "${srcdir}/${_Iblue2}" "${pkgdir}/etc/init.d/bluetooth"
		_p1='s|/usr/sbin|/usr/lib/bluetooth|g'
		sed -e "${_sb}" -e "${_p1}" -i "${pkgdir}/etc/init.d/bluetooth"
		sed -e "${_sb}" -e "${_bin[0]}" -i "${pkgdir}/etc/init.d/rfcomm"
	fi

	if (( ${_use_connman} ));then
		install -Dm755 "${srcdir}/${_Ccon}" "${pkgdir}/etc/conf.d/connman"
		install -Dm755 "${srcdir}/${_Icon}" "${pkgdir}/etc/init.d/connman"
		sed -e "${_sb}" -e "${_bin[0]}" -i "${pkgdir}/etc/init.d/connman"
	fi

	if (( ${_use_cups} ));then
		install -Dm755 "${srcdir}/${_Icups}" "${pkgdir}/etc/init.d/cupsd"
		_p1='s|lp:lpadmin|daemon:sys|' _p2='s|@neededservices@|need dbus avahi-daemon|'
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_p1}" -e "${_p2}" -i "${pkgdir}/etc/init.d/cupsd"
	fi

	if (( ${_use_dhcp} ));then
		install -Dm755 "${srcdir}/${_Cdhcp1}" "${pkgdir}/etc/conf.d/dhcpd"
		install -Dm755 "${srcdir}/${_Idhcp1}" "${pkgdir}/etc/init.d/dhcpd"
		install -Dm755 "${srcdir}/${_Cdhcp2}" "${pkgdir}/etc/conf.d/dhcrelay"
		install -Dm755 "${srcdir}/${_Idhcp2}" "${pkgdir}/etc/init.d/dhcrelay"
		install -Dm755 "${srcdir}/${_Cdhcp3}" "${pkgdir}/etc/conf.d/dhcrelay6"
		install -Dm755 "${srcdir}/${_Idhcp3}" "${pkgdir}/etc/init.d/dhcrelay6"
		_p1='s|#@slapd@|ldap slapd|'
		for f in ${pkgdir}/etc/init.d/*;do
			sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}"  -e "${_p1}" -i $f
		done
	fi

	if (( ${_use_dhcpcd} ));then
		install -Dm755 "${srcdir}/${_Idhcpcd}" "${pkgdir}/etc/init.d/dhcpcd"
		sed -e "${_sb}" -e "${_bin[1]}" -e "${_run}" -i "${pkgdir}/etc/init.d/dhcpcd"
	fi

	if (( ${_use_hostapd} ));then
		install -Dm755 "${srcdir}/${_Chost}" "${pkgdir}/etc/conf.d/hostapd"
		install -Dm755 "${srcdir}/${_Ihost}" "${pkgdir}/etc/init.d/hostapd"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/hostapd"
	fi

	if (( ${_use_inetutils} ));then
		install -Dm755 "${srcdir}/inetutils.confd" "${pkgdir}/etc/conf.d/ftpd"
		install -Dm755 "${srcdir}/inetutils.initd" "${pkgdir}/etc/init.d/ftpd"
	fi

	if (( ${_use_iptables} ));then
		install -Dm755 "${srcdir}/${_Cip1}" "${pkgdir}/etc/conf.d/iptables"
		install -Dm755 "${srcdir}/${_Iip}" "${pkgdir}/etc/init.d/iptables"
		install -Dm755 "${srcdir}/${_Cip2}" "${pkgdir}/etc/conf.d/ip6tables"
		install -Dm755 "${srcdir}/${_Iip}" "${pkgdir}/etc/init.d/ip6tables"
		for f in ${pkgdir}/etc/init.d/*;do
			sed -e "${_sb}" -e "${_bin[1]}" -e "${_run}" -i $f
		done
	fi

	if (( ${_use_krb5} ));then
		install -Dm755 "${srcdir}/${_Ikrb1}" "${pkgdir}/etc/init.d/krb5kadmind"
		install -Dm755 "${srcdir}/${_Ikrb2}" "${pkgdir}/etc/init.d/krb5kdc"
		install -Dm755 "${srcdir}/${_Ikrb3}" "${pkgdir}/etc/init.d/krb5kpropd"
		_p1='s|mit-krb5kdc|krb5kdc|g' _p2='s|mit-krb5kadmind|krb5kadmind|g'
		for f in ${pkgdir}/etc/init.d/*;do
			sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -e "${_p1}" -e "${_p2}" -i $f
		done
	fi

	if (( ${_use_ldap} ));then
		install -Dm755 "${srcdir}/${_Cldap}" "${pkgdir}/etc/conf.d/slapd"
		install -Dm755 "${srcdir}/${_Ildap}" "${pkgdir}/etc/init.d/slapd"
		_p1='s|/usr/lib/openldap/slapd|/usr/lib/slapd|g'
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -e "${_p1}" -i "${pkgdir}/etc/init.d/slapd"
	fi

	if (( ${_use_lighttpd} ));then
		install -Dm755 "${srcdir}/${_Clight}" "${pkgdir}/etc/conf.d/lighttpd"
		install -Dm755 "${srcdir}/${_Ilight}" "${pkgdir}/etc/init.d/lighttpd"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/lighttpd"
	fi

	if (( ${_use_openntpd} ));then
		install -Dm755 "${srcdir}/${_Cntp}" "${pkgdir}/etc/conf.d/ntpd"
		install -Dm755 "${srcdir}/${_Intp}" "${pkgdir}/etc/init.d/ntpd"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/ntpd"
	fi

	if (( ${_use_ntp} ));then
		install -Dm755 "${srcdir}/${_Cntp1}" "${pkgdir}/etc/conf.d/ntpd"
		install -Dm755 "${srcdir}/${_Intp1}" "${pkgdir}/etc/init.d/ntpd"
		install -Dm755 "${srcdir}/${_Cntp2}" "${pkgdir}/etc/conf.d/ntp-client"
		install -Dm755 "${srcdir}/${_Intp2}" "${pkgdir}/etc/init.d/ntp-client"
		install -Dm755 "${srcdir}/${_Cntp3}" "${pkgdir}/etc/conf.d/sntp"
		install -Dm755 "${srcdir}/${_Intp3}" "${pkgdir}/etc/init.d/sntp"
		for f in ${pkgdir}/etc/init.d/*;do
			sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i $f
		done
	fi

	if (( ${_use_polipo} ));then
		install -Dm755 "${srcdir}/${_Ipolip}" "${pkgdir}/etc/init.d/polipo"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/polipo"
	fi

	if (( ${_use_postfix} ));then
		install -Dm755 "${srcdir}/${_Ipostfix}" "${pkgdir}/etc/init.d/postfix"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/postfix"
	fi

	if (( ${_use_privoxy} ));then
		install -Dm755 "${srcdir}/${_Ipriv}" "${pkgdir}/etc/init.d/privoxy"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/privoxy"
	fi

	if (( ${_use_rpcbind} ));then
		install -Dm755 "${srcdir}/${_Crpc}" "${pkgdir}/etc/conf.d/rpcbind"
		install -Dm755 "${srcdir}/${_Irpc}" "${pkgdir}/etc/init.d/rpcbind"
		sed -e "${_sb}" -e "${_bin[1]}" -e "${_run}" -i "${pkgdir}/etc/init.d/rpcbind"
	fi

	if (( ${_use_nfs} ));then
		install -Dm755 "${srcdir}/${_Cnfs}" "${pkgdir}/etc/conf.d/nfs-rc"
		install -Dm755 "${srcdir}/${_Infs1}" "${pkgdir}/etc/init.d/nfs-rc"
		install -Dm755 "${srcdir}/${_Infs2}" "${pkgdir}/etc/init.d/nfsmount"
		install -Dm755 "${srcdir}/${_Infs3}" "${pkgdir}/etc/init.d/rpc.gssd"
		install -Dm755 "${srcdir}/${_Infs4}" "${pkgdir}/etc/init.d/rpc.idmapd"
		install -Dm755 "${srcdir}/${_Infs5}" "${pkgdir}/etc/init.d/rpc.pipefs"
		install -Dm755 "${srcdir}/${_Infs6}" "${pkgdir}/etc/init.d/rpc.statd"
		install -Dm755 "${srcdir}/${_Infs7}" "${pkgdir}/etc/init.d/rpc.svcgssd"
		_p1='s|/etc/conf.d/nfs|/etc/conf.d/nfs-rc|g'
		for f in ${pkgdir}/etc/init.d/*;do
			sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}"  -e "${_p1}" -i $f
		done
	fi

	if (( ${_use_quota} ));then
		install -Dm755 "${srcdir}/${_Cquota}" "${pkgdir}/etc/conf.d/quota"
		install -Dm755 "${srcdir}/${_Iquota1}" "${pkgdir}/etc/init.d/quota"
		install -Dm755 "${srcdir}/${_Iquota2}" "${pkgdir}/etc/init.d/rpc.rquotad"
		for f in ${pkgdir}/etc/init.d/*;do
			sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i $f
		done
		_p1='s|/etc/conf.d/nfs|/etc/conf.d/nfs-rc|g'
		sed -e "${_p1}" -i "${pkgdir}/etc/init.d/rpc.rquotad"
	fi

	if (( ${_use_rsync} ));then
		install -Dm755 "${srcdir}/${_Crsync}" "${pkgdir}/etc/conf.d/rsyncd"
		install -Dm755 "${srcdir}/${_Irsync}" "${pkgdir}/etc/init.d/rsyncd"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/rsyncd"
	fi

	if (( ${_use_samba} ));then
		install -Dm755 "${srcdir}/${_Csmb}" "${pkgdir}/etc/conf.d/samba-rc"
		install -Dm755 "${srcdir}/${_Ismb}" "${pkgdir}/etc/init.d/samba-rc"
		_p1='s|SVCNAME##samba|SVCNAME##samba-rc|g' _p2='s|"samba"|"samba-rc"|g'
		sed -e "${_bin[0]}" -i "${pkgdir}/etc/conf.d/samba-rc"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -e "${_p1}" -e "${_p2}" -i "${pkgdir}/etc/init.d/samba-rc"
	fi

	if (( ${_use_sasl} ));then
		install -Dm755 "${srcdir}/${_Isasl}" "${pkgdir}/etc/init.d/saslauthd"
		sed -e "${_sb}" -e "${_bin[0]}" -i "${pkgdir}/etc/init.d/saslauthd"
	fi

	if (( ${_use_slp} ));then
		install -Dm755 "${srcdir}/${_Islp}" "${pkgdir}/etc/init.d/slpd"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/slpd"
	fi

	if (( ${_use_squid} ));then
		install -Dm755 "${srcdir}/${_Csquid}" "${pkgdir}/etc/conf.d/squid"
		install -Dm755 "${srcdir}/${_Isquid}" "${pkgdir}/etc/init.d/squid"
		_p1='s|chown squid|chown proxy|g'
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -e "${_p1}" -i "${pkgdir}/etc/init.d/squid"
	fi

	if (( ${_use_ssh} ));then
		install -Dm755 "${srcdir}/${_Cssh}" "${pkgdir}/etc/conf.d/sshd"
		install -Dm755 "${srcdir}/${_Issh}" "${pkgdir}/etc/init.d/sshd"
		sed -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/conf.d/sshd"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/sshd"
	fi

	if (( ${_use_transmission} ));then
		install -Dm755 "${srcdir}/${_Ctrans}" "${pkgdir}/etc/conf.d/transmission-daemon"
		install -Dm755 "${srcdir}/${_Itrans}" "${pkgdir}/etc/init.d/transmission-daemon"
		sed -e "${_sb}" -e "${_run}" -i "${pkgdir}/etc/init.d/transmission-daemon"
	fi

	if (( ${_use_ufw} ));then
		install -Dm755 "${srcdir}/${_Cufw}" "${pkgdir}/etc/conf.d/ufw"
		install -Dm755 "${srcdir}/${_Iufw}" "${pkgdir}/etc/init.d/ufw"
		_p1='s|/usr/share/ufw/ufw-init-functions|/usr/lib/ufw/ufw-init-functions|g'
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -e "${_p1}" -i "${pkgdir}/etc/init.d/ufw"
	fi

	if (( ${_use_vpn} ));then
		install -Dm755 "${srcdir}/${_Cvpn}" "${pkgdir}/etc/conf.d/openvpn"
		install -Dm755 "${srcdir}/${_Ivpn}" "${pkgdir}/etc/init.d/openvpn"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/openvpn"
	fi

	if (( ${_use_vsftp} ));then
		install -Dm755 "${srcdir}/${_Ivsftp}" "${pkgdir}/etc/init.d/vsftpd"
		install -Dm755 "${srcdir}/${_Svsftp}" "${pkgdir}/usr/lib/vsftpd-checkconfig.sh"
		_p1='s|/usr/libexec/|/usr/lib/|g'
		_p2='s|/etc/vsftpd/|/etc/|g'
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -e "${_p1}" -e "${_p2}" -i "${pkgdir}/etc/init.d/vsftpd"
		sed -e "${_p2}" -i "${pkgdir}/usr/lib/vsftpd-checkconfig.sh"
	fi

	if (( ${_use_wicd} ));then
		install -Dm755 "${srcdir}/${_Iwicd}" "${pkgdir}/etc/init.d/wicd"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/wicd"
	fi

	if (( ${_use_wpa} ));then
		install -Dm755 "${srcdir}/${_Cwpa}" "${pkgdir}/etc/conf.d/wpa_supplicant"
		install -Dm755 "${srcdir}/${_Iwpa}" "${pkgdir}/etc/init.d/wpa_supplicant"
		install -Dm755 "${srcdir}/${_Swpa}" "${pkgdir}/etc/wpa_supplicant/wpa_cli.sh"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/wpa_supplicant"
		sed -e 's|gentoo-release|arch-release|' -i "${pkgdir}/etc/wpa_supplicant/wpa_cli.sh"
	fi

	if (( ${_use_xinet} ));then
		install -Dm755 "${srcdir}/${_Cxinet}" "${pkgdir}/etc/conf.d/xinetd"
		install -Dm755 "${srcdir}/${_Ixinet}" "${pkgdir}/etc/init.d/xinetd"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/xinetd"
	fi

	if (( ${_use_ypbind} ));then
		install -Dm755 "${srcdir}/${_Cypbind}" "${pkgdir}/etc/conf.d/ypbind"
		install -Dm755 "${srcdir}/${_Iypbind}" "${pkgdir}/etc/init.d/ypbind"
		sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i "${pkgdir}/etc/init.d/ypbind"
	fi

	if (( ${_use_ypserv} ));then
		install -Dm755 "${srcdir}/${_Cypserv1}" "${pkgdir}/etc/init.d/ypserv"
		install -Dm755 "${srcdir}/${_Iypserv1}" "${pkgdir}/etc/conf.d/ypserv"
		install -Dm755 "${srcdir}/${_Cypserv2}" "${pkgdir}/etc/conf.d/rpc.yppasswdd"
		install -Dm755 "${srcdir}/${_Iypserv2}" "${pkgdir}/etc/init.d/rpc.yppasswdd"
		install -Dm755 "${srcdir}/${_Cypserv3}" "${pkgdir}/etc/conf.d/rpc.ypxfrd"
		install -Dm755 "${srcdir}/${_Iypserv3}" "${pkgdir}/etc/init.d/rpc.ypxfrd"
		for f in ${pkgdir}/etc/init.d/*;do
			sed -e "${_sb}" -e "${_bin[0]}" -e "${_run}" -i $f
		done
	fi

}
