package_openrc4arch-meta-base() {
	pkgdesc="OpenRC meta base package"
	groups=('meta-base')
	depends=('cryptsetup'
		'device-mapper-openrc'
		'virtual-dhcp'
		'glibc'
		'inetutils'
		'lvm2'
		'mdadm'
		'udev'
		'virtual-cron'
		'virtual-wireless')
	optdepends=('virtual-syslog'
		'virtual-timed')
	replaces=('base')
	conflicts=('base')
}

