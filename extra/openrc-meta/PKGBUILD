package_openrc4arch-meta-base() {
	pkgdesc="OpenRC meta base package"
	groups=('meta-base-openrc')
	depends=('cryptsetup-openrc'
		'virtual-dhcp-openrc'
		'glibc-openrc'
		'lvm2-openrc'
		'mdadm-openrc'
		'udev-openrc'
		'virtual-cron-openrc'
		'virtual-wireless-openrc')
	optdepends=('virtual-syslog-openrc'
		'virtual-timed-openrc')
	replaces=('openrc-base')
	conflicts=('openrc-base')
}

