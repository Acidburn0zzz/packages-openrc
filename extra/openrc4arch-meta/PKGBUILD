		'openrc4arch-device-mapper-plugin'
		'openrc4arch-virtual-dhcp'
		'openrc4arch-glibc-plugin'
		'openrc4arch-inetutils-plugin'
		'openrc4arch-lvm2-plugin'
		'openrc4arch-mdadm-plugin'
		'openrc4arch-udev-plugin'
		'openrc4arch-virtual-cron'
		'openrc4arch-virtual-wireless')
	optdepends=('openrc4arch-virtual-syslog'
		'openrc4arch-virtual-timed')
	replaces=('openrc4arch-base')
	conflicts=('openrc4arch-base')
}

