# Maintainer: udeved <udeved@openrc4arch.site40.net>

_name="hostapd"
_cat="net-wireless"
_gentoo_uri="http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/${_cat}/${_name}/files"

pkgname=${_name}-openrc
pkgver=20130820
pkgrel=1
pkgdesc="OpenRC ${_name} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-mobile')
depends=('openrc' "${_name}")
install=${_name}.install
source=("${_gentoo_uri}/hostapd-conf.d"
		"${_gentoo_uri}/hostapd-init.d")
sha256sums=('916f4b14095ee4ec8a510391c883e9f01868e18d79a3d5cbeb13a104a793d45d'
            'a220058841e66a11603df8e968ccc68945f01e1d11c1ae498922d0e01f6fa804')

package() {
		install -Dm755 "$srcdir/hostapd-conf.d" "$pkgdir/etc/conf.d/hostapd"
		install -Dm755 "$srcdir/hostapd-init.d" "$pkgdir/etc/init.d/hostapd"
		
		_fix_init "$pkgdir/etc/init.d/hostapd"

}

_fix_init(){

	sed -e 's|#!/sbin/runscript|#!/usr/bin/runscript|' -e 's|/usr/sbin|/usr/bin|g' -e 's|/var/run|/run|g' -i $1
	
}
