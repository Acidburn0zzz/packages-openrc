depend() {
	need dbus
}

start() {
	ebegin "Starting ${SVCNAME}"
	/usr/bin/keyboardctl "${OPTS}"
	eend $?
}

stop() {
	ebegin "Stopping ${SVCNAME}"
	# Nothing needs to be done as keyboardctl automatically exits after executing
	eend $?
}
