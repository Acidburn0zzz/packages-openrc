# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="dcron"
_ver=20130325

pkgname=${_rn}-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "${_rn}")
provides=('openrc-cron')
conflicts=('cronie-openrc' 'fcron-openrc')
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/dcron.confd-4.4" "$pkgdir/etc/conf.d/${_rn}"
	install -Dm755 "$srcdir/${_rn}/init.d/dcron.init-4.5" "$pkgdir/etc/init.d/${_rn}"
}
sha256sums=('85da45ec412938e391afc015032245ced3f98ae9ebecd885069199308c5fc034')
