# Maintainer: udeved <udeved@openrc4arch.site40.net>

pkgname=udev-init-scripts
pkgver=26
pkgrel=3
pkgdesc="udev startup scripts for openrc"
arch=('any')
url="http://www.gentoo.org"
license=('GPL2')
groups=('openrc-base')
depends=('udev' 'openrc>=0.12')
makedepends=('pkg-config')
install=udev.install
source=("http://dev.gentoo.org/~williamh/dist/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('eff4cd581cb5d57a1fa09772f9f82a37d9a33a3828f0b7e988278a974864d203')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  sed -e 's|#!/sbin/runscript|#!/usr/bin/runscript|' -e 's|/sbin/udevd|/usr/bin/udevd|g' -i "${pkgdir}/etc/init.d/udev"
  sed -e 's|#!/sbin/runscript|#!/usr/bin/runscript|' -i "${pkgdir}/etc/init.d/udev-mount"
}
