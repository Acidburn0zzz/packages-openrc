# Maintainer: udeved <udeved@openrc4arch.site40.net>

_name="nfs-utils"
_cat="net-fs"
_gentoo_uri="http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/${_cat}/${_name}/files"

pkgname=${_name}-openrc
pkgver=20130821
pkgrel=1
pkgdesc="OpenRC ${_name} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-fs')
depends=('openrc' "${_name}" 'rpcbind-openrc' 'device-mapper-openrc')
optdepends=('ypbind-mt' 'quota-tools' 'bind-openrc')
install=${_name}.install
source=("${_gentoo_uri}/nfs.confd"
	"${_gentoo_uri}/nfs.initd"
	"${_gentoo_uri}/nfsmount.initd"
	"${_gentoo_uri}/rpc.gssd.initd"
	"${_gentoo_uri}/rpc.idmapd.initd"
	"${_gentoo_uri}/rpc.pipefs.initd"
	"${_gentoo_uri}/rpc.statd.initd"
	"${_gentoo_uri}/rpc.svcgssd.initd")
sha256sums=('22bba4ee5d58bae422650875c7c8a797a52fc121ddd02d48297c075b8a35401e'
            '8df22f253770a24c6a53ce332d821ab680d0ede18d0e968c1c5d8b3796cb74be'
            'b57637c7eb8e40b5cc1655e8afa69dc0aaecbd3186bdca3301586d1e9b797357'
            '00d9c29280a83e8458c33139d04a9b38c6fdba9d7cb9b420ca83bf6b10e6435d'
            '3ce65326859c43983dad25ad2d4731488c488037796e39b6b5eda336e8bf81ef'
            '6503951b3c200ccf3f46396f7b9274f0a565807f7f6e561c17bed6b0133ae49a'
            '0c7bd35a14da6c0c2577f09ae82a41ddb693a88157eeaf80684616f79be6c304'
            'f1c460d8b0e91e54a551397d755135d05a3728d81de596535bf8bda074455677')

pkgver() {
  date +%Y%m%d
}

package() {
  install -Dm755 "${srcdir}/nfs.confd" "${pkgdir}/etc/conf.d/nfs-rc"
  install -Dm755 "${srcdir}/nfs.initd" "${pkgdir}/etc/init.d/nfs"
  install -Dm755 "${srcdir}/nfsmount.initd" "${pkgdir}/etc/init.d/nfsmount"
  install -Dm755 "${srcdir}/rpc.gssd.initd" "${pkgdir}/etc/init.d/rpc.gssd"
  install -Dm755 "${srcdir}/rpc.idmapd.initd" "${pkgdir}/etc/init.d/rpc.idmapd"
  install -Dm755 "${srcdir}/rpc.pipefs.initd" "${pkgdir}/etc/init.d/rpc.pipefs"
  install -Dm755 "${srcdir}/rpc.statd.initd" "${pkgdir}/etc/init.d/rpc.statd"
  install -Dm755 "${srcdir}/rpc.svcgssd.initd" "${pkgdir}/etc/init.d/rpc.svcgssd"
  _fix_init "${pkgdir}/etc/init.d/nfs"
  _fix_init "${pkgdir}/etc/init.d/nfsmount"
  _fix_init "${pkgdir}/etc/init.d/rpc.gssd"
  _fix_init "${pkgdir}/etc/init.d/rpc.idmapd"
  _fix_init "${pkgdir}/etc/init.d/rpc.pipefs"
  _fix_init "${pkgdir}/etc/init.d/rpc.statd"
  _fix_init "${pkgdir}/etc/init.d/rpc.svcgssd"
}

_fix_init(){
  sed -e 's|#!/sbin/runscript|#!/usr/bin/runscript|' -e 's|/usr/sbin|/usr/bin|g' -e 's|/var/run|/run|g' -e 's|/etc/conf.d/nfs|/etc/conf.d/nfs-rc|g' -i $1
}
