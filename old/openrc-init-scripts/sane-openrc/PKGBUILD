# Maintainer: udeved <udeved@openrc4arch.site40.net>

_name="sane-backends"
_cat="media-gfx"
_gentoo_uri="http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/${_cat}/${_name}/files"

pkgname=sane-openrc
pkgver=20130821
pkgrel=1
pkgdesc="OpenRC sane init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-misc')
depends=('openrc' 'sane')
install=sane.install
source=("${_gentoo_uri}/saned.confd"
	"${_gentoo_uri}/saned.initd")

pkgver() {
  date +%Y%m%d
}

package() {
  install -Dm755 "${srcdir}/saned.confd" "${pkgdir}/etc/conf.d/saned"
  install -Dm755 "${srcdir}/saned.initd" "${pkgdir}/etc/init.d/saned"
  _fix_init ${pkgdir}/etc/init.d/saned
}

_fix_init(){
  sed -e 's|#!/sbin/runscript|#!/usr/bin/runscript|' -e 's|/var/run|/run|' -e 's|/usr/sbin|/usr/bin|' -i $1
}

sha256sums=('197e44ba1f438a18f5f7d9f5858feb19c1ece4286d82a5e63caf9be5b964aa76'
            '4dd4e7fa07bf2ab2d4f5753156f5df0ad2277523f6755b0eab3d2db3480989e2')
