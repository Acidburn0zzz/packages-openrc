# Maintainer: udeved <udeved@openrc4arch.site40.net>

_name="transmission"
_cat="net-p2p"
_gentoo_uri="http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/${_cat}/${_name}/files"

pkgname=${_name}-openrc
pkgver=20131014
pkgrel=1
pkgdesc="OpenRC ${_name} init scripts"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-net')
depends=('openrc' "${_name}")
install=${_name}.install
source=("${_gentoo_uri}/transmission-daemon.confd.4"
	"${_gentoo_uri}/transmission-daemon.initd.9")
sha256sums=('249689688aad23d0d27ccdd08a0907fd85058d6a52ccd3467f756b07f5d059ee'
            '06d047b47befe6aaf1b1542fdd50e84ea38e0fef004b5095f6096f33fa1901a3')

pkgver() {
  date +%Y%m%d
}

package() {
  install -Dm755 "${srcdir}/transmission-daemon.confd.4" "${pkgdir}/etc/conf.d/transmission-daemon"
  install -Dm755 "${srcdir}/transmission-daemon.initd.9" "${pkgdir}/etc/init.d/transmission-daemon"
  _fix_init "${pkgdir}/etc/init.d/transmission-daemon"
}

_fix_init(){
  sed -e 's|#!/sbin/runscript|#!/usr/bin/runscript|' -e 's|/var/run|/run|g' -i $1
}

