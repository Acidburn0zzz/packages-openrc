svc="dcron"
rlvl="default"

post_install() {
	_cmd="rc-update add $svc $rlvl"
	echo "	==> run '$_cmd'"
}

post_upgrade() {
	post_install "$1"
	if [ $(vercmp $2 4.0) -lt 0 ]
	then
		echo "Restart crond, since you're upgrading to the dcron 4.x series."
	fi
}

post_remove() {
	_cmd="rc-update del $svc $rlvl"
	echo "	==> run '$_cmd'"
}
