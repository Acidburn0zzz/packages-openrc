svc="dhcpd"
rlvl="default"

post_install() {
	_usr="dhcp"
	_grp="dhcp"
	echo "	==>  requires $_usr user"
	echo "	==>  requires $_grp group"
	_cmd="rc-update add $svc $rlvl"
	echo "	==> run '$_cmd'"
}

post_upgrade() {
	post_install "$1"
}

post_remove() {
	_cmd="rc-update del $svc $rlvl"
	echo "	==> run '$_cmd'"
}
