# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-init-scripts
_rn=glibc

pkgname=$_rn-openrc
pkgver=20130817
pkgrel=1
pkgdesc="OpenRC nscd init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-base')
depends=('openrc' "$_rn")
optdepends=('openldap-openrc' 'bind-openrc')
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
	install -Dm755 "$srcdir/$_pn/$_rn/init.d/nscd" "$pkgdir/etc/init.d/nscd"
}
sha256sums=('63753e41de7d728bf80c1b84e994b19e3a3669c161a1b801c8caba2f9a8a1e2b')
