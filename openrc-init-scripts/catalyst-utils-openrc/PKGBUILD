# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-init-scripts
_rn=catalyst-utils

pkgname=$_rn-openrc
pkgver=20130817
pkgrel=2
pkgdesc="OpenRC $_rn atieventsd init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "$_rn" 'udev-init-scripts' 'acpid-openrc')
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
	install -Dm755 "$srcdir/$_pn/ati-drivers/init.d/atieventsd.init" "$pkgdir/etc/init.d/atieventsd"
	
	echo '${ATIEVENTSDOPTS}=""' > "$srcdir/atieventsd.conf"
	install -Dm755 "$srcdir/atieventsd.conf" "$pkgdir/etc/conf.d/atieventsd"

}
sha256sums=('63753e41de7d728bf80c1b84e994b19e3a3669c161a1b801c8caba2f9a8a1e2b')
            
