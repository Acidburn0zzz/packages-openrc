# Maintainer: udeved <udeved@openrc4arch.site40.net>

_name="connman"
_cat="net-misc"
_gentoo_uri="http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/${_cat}/${_name}/files"

pkgname=${_name}-openrc
pkgver=20131013
pkgrel=1
pkgdesc="OpenRC ${_name} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('dbus-openrc' "${_name}")
groups=('openrc-mobile')
install=${_name}.install
source=("${_gentoo_uri}/connman.confd"
	"${_gentoo_uri}/connman.initd2")

pkgver() {
  date +%Y%m%d
}

package() {
  install -Dm755 "${srcdir}/connman.confd" "${pkgdir}/etc/conf.d/connman"
  install -Dm755 "${srcdir}/connman.initd2" "${pkgdir}/etc/init.d/connman"
  _fix_init "${pkgdir}/etc/init.d/connman"
}

_fix_init(){
  sed -e 's|#!/sbin/runscript|#!/usr/bin/runscript|' -e 's|/usr/sbin|/usr/bin|g' -i $1
}
sha256sums=('767a160c1b3392f0a12d3908a937548a2f604a9a121e744c309ee6f478420b02'
            'f0a561f124cac3791fba6ee7ef5bc3ea46bd7535edf9e864689b0d9cfa65d332')
