# Maintainer: udeved <udeved@openrc4arch.site40.net>

_name="gpm"
_cat="sys-libs"
_gentoo_uri="http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/${_cat}/${_name}/files"

pkgname=${_name}-openrc
pkgver=20130821
pkgrel=1
pkgdesc="OpenRC ${_name} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-misc')
depends=('openrc' "${_name}")
install=${_name}.install
source=("${_gentoo_uri}/gpm.conf.d"
		"${_gentoo_uri}/gpm.rc6-2")
sha256sums=('73e7483fdc4b12ab4225a4cb13bbe7da71b07b9e69b17e3a6a4c63cb5e2287c8'
            'e692e7b97efdd79f6e92fbdaed60f7a71bfd23a82c5561b160b88a7aa50c8461')

package() {
		install -Dm755 "$srcdir/$_pn/$_rn/conf.d/gpm.conf.d" "$pkgdir/etc/conf.d/gpm"
		install -Dm755 "$srcdir/$_pn/$_rn/init.d/gpm.rc6-2" "$pkgdir/etc/init.d/gpm"

		_fix_init "$pkgdir/etc/init.d/gpm"
}

_fix_init(){

	sed -e 's|#!/sbin/runscript|#!/usr/bin/runscript|' -e 's|/usr/sbin|/usr/bin|g' -e 's|/var/run|/run|g' -i $1
	
}
