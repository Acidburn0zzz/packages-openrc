# Maintainer: udeved <udeved@openrc4arch.site40.net>

_name="openldap"
_cat="net-nds"
_gentoo_uri="http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/${_cat}/${_name}/files"

pkgname=${_name}-openrc
pkgver=20130821
pkgrel=1
pkgdesc="OpenRC ${_name} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "${_name}")
groups=('openrc-net')
install=${_name}.install
source=("${_gentoo_uri}/slapd-confd-2.4.28-r1"
		"${_gentoo_uri}/slapd-initd-2.4.28-r1")
sha256sums=('5bca003ec3b67c7c78519aede1d82002579006ccfecce8f87b559df719f82e92'
            '1fc515a6816b8a750db513df0b3b9bf8dd8bd4c4e9051205521acadfdebeae0f')

package() {
	install -Dm755 "$srcdir/slapd-confd-2.4.28-r1" "$pkgdir/etc/conf.d/slapd"
	install -Dm755 "$srcdir/slapd-initd-2.4.28-r1" "$pkgdir/etc/init.d/slapd"
	
	_fix_init "$pkgdir/etc/init.d/slapd"
}

_fix_init(){

	sed -e 's|#!/sbin/runscript|#!/usr/bin/runscript|' -e 's|/usr/sbin|/usr/bin|g' -e 's|/usr/lib/openldap/slapd|/usr/lib/slapd|g' -e 's|/var/run|/run|g' -i $1
	
}
