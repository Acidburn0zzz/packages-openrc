# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-init-scripts
_rn=squid

pkgname=$_rn-openrc
pkgver=20130817
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "$_rn")
optdepends=('bind-openrc')
groups=('openrc-net')
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
		install -Dm755 "$srcdir/$_pn/$_rn/conf.d/squid.confd-r1" "$pkgdir/etc/conf.d/squid"
		install -Dm755 "$srcdir/$_pn/$_rn/init.d/squid.initd-r3" "$pkgdir/etc/init.d/squid"
}
sha256sums=('6f5a4b729200226363325d207d475216db4eb8d6e29075a170f5fc7a52943255')
