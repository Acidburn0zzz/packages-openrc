# Maintainer: udeved <udeved@openrc4arch.site40.net>

_name="squid"
_cat="net-proxy"
_gentoo_uri="http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/${_cat}/${_name}/files"

pkgname=${_name}-openrc
pkgver=20130821
pkgrel=1
pkgdesc="OpenRC ${_name} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "${_name}")
optdepends=('bind-openrc')
groups=('openrc-net')
install=${_name}.install
source=("${_gentoo_uri}/squid.confd-r1"
		"${_gentoo_uri}/squid.initd-r3")
sha256sums=('214a184495a3384eb452caef435256043bc51e35140a61b1f5fdff32603c8f7e'
            '9b16b1ab2d3d3411dfcd8ac76b13a0889503ca78e3c6123814801af7577537f3')

pkgver() {
  date +%Y%m%d
}
		
package() {
		install -Dm755 "${srcdir}/squid.confd-r1" "${pkgdir}/etc/conf.d/squid"
		install -Dm755 "${srcdir}/squid.initd-r3" "${pkgdir}/etc/init.d/squid"
		
		_fix_init "${pkgdir}/etc/init.d/squid"
}

_fix_init(){

	sed -e 's|#!/sbin/runscript|#!/usr/bin/runscript|' -e 's|/usr/sbin|/usr/bin|g' -e 's|/var/run|/run|g' -e 's|chown squid|chown proxy|g' -i $1
	
}
