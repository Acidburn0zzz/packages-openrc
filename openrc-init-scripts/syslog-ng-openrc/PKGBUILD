# Maintainer: udeved <udeved@openrc4arch.site40.net>

_name="syslog-ng"
_cat="app-admin"
_gentoo_uri="http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/${_cat}/${_name}/files"

pkgname=${_name}-openrc
pkgver=20130820
pkgrel=1
pkgdesc="OpenRC ${_name} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "${_name}")
groups=('openrc-misc')
install=${_name}.install
source=("${_gentoo_uri}/syslog-ng.confd"
		"${_gentoo_uri}/syslog-ng.rc6.3.3")
sha256sums=('8319ca8e39a5dab5ddc82eede088e1f58ff25deef330804648000359cb736a3f'
            '19bbd35abc9f54ce368e1ccf46b6e4af6eec304906e432bb9968d50a01d18284')
		
package() {
	install -Dm755 "$srcdir/syslog-ng.confd" "$pkgdir/etc/conf.d/syslog-ng"
	install -Dm755 "$srcdir/syslog-ng.rc6.3.3" "$pkgdir/etc/init.d/syslog-ng"
	
	_fix_init "$pkgdir/etc/init.d/syslog-ng"
}

_fix_init(){

	sed -e 's|#!/sbin/runscript|#!/usr/bin/runscript|' -e 's|/usr/sbin|/usr/bin|g' -e 's|/var/run|/run|g' -i $1
	
}
