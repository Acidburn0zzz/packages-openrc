# Maintainer: udeved <udeved@openrc4arch.site40.net>

_name="virtualbox-guest-additions"
_cat="app-emulation"
_gentoo_uri="http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/${_cat}/${_name}/files"

pkgname=vbox-guest-openrc
pkgver=20130821
pkgrel=1
pkgdesc="OpenRC ${_name} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
#groups=('openrc-misc')
depends=('openrc' 'virtualbox-guest-utils')
install=${_name}.install
source=("${_gentoo_uri}/virtualbox-guest-additions-8.initd")
sha256sums=('605e7fe4dea401547957db63e45f3f75ae2da3544b0ff1f3279fcf07217d5aac')

pkgver() {
  date +%Y%m%d
}

package() {
	install -Dm755 "$srcdir/virtualbox-guest-additions-8.initd" "$pkgdir/etc/init.d/vboxservice"
	
	_fix_init "$pkgdir/etc/init.d/vboxservice"
}

_fix_init(){

	sed -e 's|#!/sbin/runscript|#!/usr/bin/runscript|' -e 's|/usr/sbin|/usr/bin|g' -e 's|/var/run|/run|g' -e 's|vboxguest-service|VBoxService|g' -i $1
	
}
