# Maintainer: udeved <udeved@openrc4arch.site40.net>

_name="wicd"
_cat="net-misc"
_gentoo_uri="http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/${_cat}/${_name}/files"

pkgname=${_name}-openrc
pkgver=20130821
pkgrel=1
pkgdesc="OpenRC ${_name} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-misc')
depends=('openrc' "${_name}" 'dbus-openrc')
install=${_name}.install
source=("${_gentoo_uri}/wicd-init.d")
sha256sums=('5546deda3d5fa8f6ee1125922f1217182b24d68a22f5a1212509bb13bf0156e2')

package() {
	install -Dm755 "$srcdir/wicd-init.d" "$pkgdir/etc/init.d/wicd"
	
	_fix_init "$pkgdir/etc/init.d/wicd"
}

_fix_init(){

	sed -e 's|#!/sbin/runscript|#!/usr/bin/runscript|' -e 's|/usr/sbin|/usr/bin|g' -e 's|/var/run|/run|g' -i $1
	
}
