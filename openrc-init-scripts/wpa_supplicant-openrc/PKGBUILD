# Maintainer: udeved <udeved@openrc4arch.site40.net>

_name="wpa_supplicant"
_cat="net-wireless"
_gentoo_uri="http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/${_cat}/${_name}/files"

pkgname=${_name}-openrc
pkgver=20130821
pkgrel=1
pkgdesc="OpenRC ${_name} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "${_name}")
groups=('openrc-mobile')
install=${_name}.install
source=("${_gentoo_uri}/wpa_supplicant-conf.d"
	"${_gentoo_uri}/wpa_supplicant-init.d")
sha256sums=('61ec59007f66ac5bacc0aa095d1f2ccbc977a687038e161a463d1727223d5a90'
            '62a3655ea88b3dfff5243666a4e90d3f0eef6370a7889affb849e178ba4a82b0')

pkgver() {
  date +%Y%m%d
}

package() {
  install -Dm755 "${srcdir}/wpa_supplicant-conf.d" "${pkgdir}/etc/conf.d/wpa_supplicant"
  install -Dm755 "${srcdir}/wpa_supplicant-init.d" "${pkgdir}/etc/init.d/wpa_supplicant"
  _fix_init "${pkgdir}/etc/init.d/wpa_supplicant"
}

_fix_init(){
  sed -e 's|#!/sbin/runscript|#!/usr/bin/runscript|' -e 's|/usr/sbin|/usr/bin|g' -e 's|/var/run|/run|g' -i $1
}
