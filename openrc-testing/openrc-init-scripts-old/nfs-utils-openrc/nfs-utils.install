svc=('nfs' 'nfsmount')
rlvl="default"

post_install() {
	_cmd="rc-update add ${svc[0]} $rlvl"
	echo "	==> run '$_cmd'"
	_cmd="rc-update add ${svc[1]} $rlvl"
	echo "	==> run '$_cmd'"
}

post_upgrade() {
	post_install "$1"
}

post_remove() {
	_cmd="rc-update del ${svc[0]} $rlvl"
	echo "	==> run '$_cmd'"
	_cmd="rc-update del ${svc[1]} $rlvl"
	echo "	==> run '$_cmd'"
}
