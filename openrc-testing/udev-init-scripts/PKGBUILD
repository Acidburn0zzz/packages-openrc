# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=udev-init-scripts

pkgname=${_pn}
pkgver=26
pkgrel=1
pkgdesc="udev startup scripts for openrc"
arch=('any')
url="http://www.gentoo.org"
license=('GPL2')
groups=('openrc-base')
depends=('udev' 'openrc')
makedepends=('pkg-config')
install=udev.install
source=("http://dev.gentoo.org/~williamh/dist/$_pn-$pkgver.tar.bz2")

package() {
	
	cd "${srcdir}/${_pn}-${pkgver}"
		
	make DESTDIR="${pkgdir}" install
	
	sed -e 's|#!/sbin/runscript|#!/usr/sbin/runscript|' -e 's|/sbin/udevd|/usr/sbin/udevd|g' -i "$pkgdir/etc/init.d/udev"
		
	sed -e 's|#!/sbin/runscript|#!/usr/sbin/runscript|' -i "$pkgdir/etc/init.d/udev-mount"
	
}
sha256sums=('eff4cd581cb5d57a1fa09772f9f82a37d9a33a3828f0b7e988278a974864d203')
