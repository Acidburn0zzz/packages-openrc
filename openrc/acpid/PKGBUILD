# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="acpid"

pkgname=openrc4arch-${_rn}-plugin
pkgver=1.1.1
pkgrel=1
_ver=20130325
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc4arch-desktop')
depends=('openrc4arch' "${_rn}")
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-$_ver.tar.xz")
sha256sums=('1092c79a6c03ac3934017d63f82e8e66b3e77fc3e8a22dbe2179e74b683eb1f4')

package() {
	install -Dm755 $srcdir/${_rn}/conf.d/acpid-2.0.16-conf.d "$pkgdir/etc/conf.d/${_rn}"
	install -Dm755 $srcdir/${_rn}/init.d/acpid-2.0.16-init.d "$pkgdir/etc/init.d/${_rn}"
}
