# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="alsa-utils"
_ver=20130325

pkgname=openrc4arch-${_rn}-plugin
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc4arch-misc')
depends=('openrc4arch' "${_rn}")
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")
sha256sums=('38789da3ed43ae01074d4e6e089874ded1da31ec2e561aa81d043aecf8330145')

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/alsasound.confd-r4" "$pkgdir/etc/conf.d/alsa"
	install -Dm755 "$srcdir/${_rn}/init.d/alsasound.initd-r5" "$pkgdir/etc/init.d/alsa"
}
