# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn=apache
_pv=2.4.4
_rel=20130227

pkgname=$_rn-openrc
pkgver=0.8.3
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "$_rn")
groups=('openrc-net')
install=$_rn.install
source=("http://dev.gentoo.org/~patrick/dist/$_rn/gentoo-$_rn-$_pv-$_rel.tar.bz2")
sha256sums=('cf27447dc87b4c145e50a6850245e3ed8d350bc3500bb249035322b23d03ccd2')

package() {

	install -Dm755 "${srcdir}/gentoo-apache-$_pv/init/apache2.confd" "${pkgdir}/etc/conf.d/httpd"
	
	install -Dm755 "${srcdir}/gentoo-apache-$_pv/init/apache2.initd" "${pkgdir}/etc/init.d/httpd"
		 
	sed -e 's|#!/sbin/runscript|#!/usr/sbin/runscript|' -e 's|apache2|httpd|g' -e 's|/etc/httpd/httpd.conf|/etc/httpd/conf/httpd.conf|g' -i "$pkgdir/etc/init.d/httpd"
}

