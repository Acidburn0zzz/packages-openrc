# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=lvm2

pkgname=$_rn-openrc
pkgver=0.9.2
pkgrel=2
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-base' 'openrc-fs')
depends=('openrc' "$_rn" 'device-mapper-openrc')
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
	install -Dm755 "$srcdir/$_pn/$_rn/conf.d/lvm.confd-2.02.28-r2" "$pkgdir/etc/conf.d/lvm"
	install -Dm755 "$srcdir/$_pn/$_rn/init.d/lvm.rc-2.02.95-r2" "$pkgdir/etc/init.d/lvm"
	install -Dm755 "$srcdir/$_pn/$_rn/init.d/lvm-monitoring.initd-2.02.67-r2" "$pkgdir/etc/init.d/lvm-monitoring"
}
sha256sums=('7f798793e431ab873f9677dc30560251d23aeb812da941f8c034ba6bddc3c0c7')
