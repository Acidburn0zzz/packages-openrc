# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=bind

pkgname=$_rn-openrc
pkgver=0.4
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-net')
depends=('openrc' "$_rn")
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
	if [ -f '/etc/conf.d/named' ]; then
		install -Dm755 "$srcdir/$_pn/$_rn/conf.d/named.confd-r6" "$pkgdir/etc/conf.d/named-rc"
		install -Dm755 "$srcdir/$_pn/$_rn/init.d/named.init-r12" "$pkgdir/etc/init.d/named-rc"
	else
		install -Dm755 "$srcdir/$_pn/$_rn/conf.d/named.confd-r6" "$pkgdir/etc/conf.d/named"
		install -Dm755 "$srcdir/$_pn/$_rn/init.d/named.init-r12" "$pkgdir/etc/init.d/named"
	fi

}
sha256sums=('69abf8eb52d83a7e5476ff4abc5113287668b2b6b4ec52e5dfee29bc59a6b3b8')
