# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="bitlbee"
_ver=20130325

pkgname=openrc4arch-${_rn}-plugin
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc4arch-misc')
depends=('openrc4arch' "${_rn}")
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")
sha256sums=('c193cd46468e8c586d89eb9767f81a2c92cd808f1ec729e5261abacd2461ee3d')

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/bitlbee.confd" "$pkgdir/etc/conf.d/bitlbee"
	install -Dm755 "$srcdir/${_rn}/init.d/bitlbee.initd" "$pkgdir/etc/init.d/bitlbee"
}
