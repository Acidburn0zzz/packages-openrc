_pn=openrc-plugins
_rn=iptables

pkgname=$_rn-openrc
pkgver=0.6
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-net')
depends=('openrc' "$_rn")
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
# 	if [ -f '/etc/conf.d/iptables' ]; then
# 		install -Dm755 "$srcdir/$_pn/$_rn/conf.d/iptables-1.4.13.confd" "$pkgdir/etc/conf.d/iptables-rc"
# 		install -Dm755 "$srcdir/$_pn/$_rn/init.d/iptables-1.4.13-r1.init" "$pkgdir/etc/init.d/iptables-rc"
# 	else
		install -Dm755 "$srcdir/$_pn/$_rn/conf.d/iptables-1.4.13.confd" "$pkgdir/etc/conf.d/iptables"
		install -Dm755 "$srcdir/$_pn/$_rn/init.d/iptables-1.4.13-r1.init" "$pkgdir/etc/init.d/iptables"
	#fi

	install -Dm755 "$srcdir/$_pn/$_rn/conf.d/ip6tables-1.4.13.confd" "$pkgdir/etc/conf.d/ip6tables"
	install -Dm755 "$srcdir/$_pn/$_rn/init.d/iptables-1.4.13-r1.init" "$pkgdir/etc/init.d/ip6tables"
