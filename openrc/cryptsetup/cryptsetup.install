_service="crypt"
_rlvl="boot"

post_install() {
	_cmd="rc-update add dm$_service $_rlvl"
	echo "	==> run '$_cmd'"
	_cmd="rc-update add $_serviceo-loop $_rlvl"
	echo "	==> run '$_cmd'"
}

post_upgrade() {
	post_install "$1"
}

post_remove() {
	_cmd="rc-update del $_service $_rlvl"
	echo "	==> run '$_cmd'"
	_cmd="rc-update del $_service $_rlvl"
	echo "	==> run '$_cmd'"
}
