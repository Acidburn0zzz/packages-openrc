# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=dcron

pkgname=$_rn-openrc
pkgver=0.1
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "$_rn")
provides=('openrc-cron')
conflicts=('cronie-openrc' 'fcron-openrc')
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
	install -Dm755 "$srcdir/$_pn/$_rn/conf.d/dcron.confd-4.4" "$pkgdir/etc/conf.d/$_rn"
	install -Dm755 "$srcdir/$_pn/$_rn/init.d/dcron.init-4.5" "$pkgdir/etc/init.d/$_rn"
}
sha256sums=('4bd600d77e344a604c9ff751613a31bf65395c6cc0a97083a76d19b3b8cdb39a')
