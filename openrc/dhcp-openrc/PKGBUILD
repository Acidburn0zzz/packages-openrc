# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=dhcp

pkgname=$_rn-openrc
pkgver=0.1
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "$_rn")
provides=('openrc-dhcp')
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
	install -Dm755 "$srcdir/$_pn/$_rn/conf.d/dhcpd.conf2" "$pkgdir/etc/conf.d/dhcpd"
	install -Dm755 "$srcdir/$_pn/$_rn/conf.d/dhcrelay6.conf" "$pkgdir/etc/conf.d/dhcrelay"
	install -Dm755 "$srcdir/$_pn/$_rn/init.d/dhcpd.init5" "$pkgdir/etc/init.d/dhcpd"
	install -Dm755 "$srcdir/$_pn/$_rn/init.d/dhcrelay.init3" "$pkgdir/etc/init.d/dhcrelay"
}
sha256sums=('4bd600d77e344a604c9ff751613a31bf65395c6cc0a97083a76d19b3b8cdb39a')
