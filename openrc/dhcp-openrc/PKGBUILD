# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=dhcp

pkgname=$_rn-openrc
pkgver=0.8.2
pkgrel=1
pkgdesc="OpenRC $_rn server and dhcrelay init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "$_rn")
groups=('openrc-net')
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
	install -Dm755 "$srcdir/$_pn/$_rn/conf.d/dhcpd.conf2" "$pkgdir/etc/conf.d/dhcpd"
	install -Dm755 "$srcdir/$_pn/$_rn/init.d/dhcpd.init5" "$pkgdir/etc/init.d/dhcpd"
	
	install -Dm755 "$srcdir/$_pn/$_rn/conf.d/dhcrelay6.conf" "$pkgdir/etc/conf.d/dhcrelay"
	install -Dm755 "$srcdir/$_pn/$_rn/init.d/dhcrelay.init3" "$pkgdir/etc/init.d/dhcrelay"
	
	install -Dm755 "$srcdir/$_pn/$_rn/conf.d/dhcrelay6.conf" "$pkgdir/etc/conf.d/dhcrelay6"
	install -Dm755 "$srcdir/$_pn/$_rn/init.d/dhcrelay.init3" "$pkgdir/etc/init.d/dhcrelay6"
}
sha256sums=('504f8ac9e162fa6182cb2e64f14074ecaed23c41ef7e31b33318d73f17ce8dc6')
