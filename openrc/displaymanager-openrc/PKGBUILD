# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=xorg-server

pkgname=displaymanager-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-desktop')
depends=('openrc' "$_rn")
backup=('etc/conf.d/xdm')
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz"
	"http://data.gpo.zugaina.org/gentoo/x11-apps/xinit/files/startDM.sh")
	
package() {
	install -Dm755 "$srcdir/$_pn-$pkgver/$_rn/conf.d/xdm.confd-4" "$pkgdir/etc/conf.d/xdm"
	install -Dm755 "$srcdir/$_pn-$pkgver/$_rn/init.d/xdm.initd-9" "$pkgdir/etc/init.d/xdm"
	install -Dm755 "$srcdir/$_pn-$pkgver/$_rn/init.d/xdm-setup.initd-1" "$pkgdir/etc/init.d/xdm-setup"
	install -Dm755 "$srcdir/startDM.sh" "$pkgdir/etc/X11/startDM.sh"
}
sha256sums=('6bf73dc52a79200e95883491e60b227d02a7cd030f3f532374037c65d2a3d48d'
            'e7f2d95b3b4b6b5d711f926f8a3b7b0163b4d9e40b40489bcbd1316806e47499')
