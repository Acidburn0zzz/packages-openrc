# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=git

pkgname=$_rn-openrc
pkgver=0.1
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-server')
depends=('openrc' "$_rn")
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
	install -Dm755 "$srcdir/$_pn/$_rn/conf.d/git-daemon.confd" "$pkgdir/etc/conf.d/git-daemon"
	install -Dm755 "$srcdir/$_pn/$_rn/init.d/git-daemon.initd" "$pkgdir/etc/init.d/git-daemon"
}
sha256sums=('6b3e30f17b2701be93d659221e10f6d66b6ef733b4e7dd5f5ffc5299b1b248a3')
