if [ -f '/etc/gpm-rc' ]
	_service="gpm-rc"
	_rlvl="default"
else
	_service="gpm"
	_rlvl="default"
fi


post_install() {
	_cmd="rc-update add $_service $_rlvl"
	echo "	==> run '$_cmd'"
}

post_upgrade() {
	post_install "$1"
}

post_remove() {
	_cmd="rc-update del $_service $_rlvl"
	echo "	==> run '$_cmd'"
}
