# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="hostapd"
_ver=20130325

pkgname=openrc4arch-${_rn}-plugin
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc4arch-misc')
depends=('openrc4arch' "${_rn}")
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/hostapd-conf.d" "$pkgdir/etc/conf.d/hostapd"
	install -Dm755 "$srcdir/${_rn}/init.d/hostapd-init.d" "$pkgdir/etc/init.d/hostapd"
}
sha256sums=('0542ea0742f088be6102b67370a73a0143f307977ae01c127fbb0d4d754306c7')
