# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="krb5"
_ver=20130325

pkgname=openrc4arch-${_rn}-plugin
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc4arch-server')
depends=('openrc4arch' "${_rn}")
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/init.d/mit-krb5kadmind.initd-r1" "$pkgdir/etc/init.d/krb5kadmind"
	install -Dm755 "$srcdir/${_rn}/init.d/mit-krb5kdc.initd-r1" "$pkgdir/etc/init.d/krb5kdc"
	install -Dm755 "$srcdir/${_rn}/init.d/mit-krb5kpropd.initd-r1" "$pkgdir/etc/init.d/krb5kpropd"
}
sha256sums=('85da45ec412938e391afc015032245ced3f98ae9ebecd885069199308c5fc034')
