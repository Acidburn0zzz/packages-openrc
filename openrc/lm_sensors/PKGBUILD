# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="lm_sensors"
_ver=20130325

pkgname=openrc4arch-${_rn}-plugin
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc4arch-misc')
depends=('openrc4arch' "${_rn}")
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/sensord-conf.d" "$pkgdir/etc/conf.d/sensord"
	install -Dm755 "$srcdir/${_rn}/init.d/sensord-4-init.d" "$pkgdir/etc/init.d/sensord"
	install -Dm755 "$srcdir/${_rn}/init.d/fancontrol-init.d-2" "$pkgdir/etc/init.d/fancontrol"
	install -Dm755 "$srcdir/${_rn}/init.d/lm_sensors-3-init.d" "$pkgdir/etc/init.d/lm_sensors"
}
sha256sums=('a198d8f10938ed3f0bbe7de7f88d53b520e64efe32ba19773a065e7c7d6f1085')
