# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=mdadm

pkgname=$_rn-openrc
pkgver=0.9.4
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-base' 'openrc-fs')
depends=('openrc' "$_rn")
optdepends=('bind-openrc')
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
	install -Dm755 "$srcdir/$_pn/$_rn/conf.d/mdadm.confd" "$pkgdir/etc/conf.d/mdadm"
	install -Dm755 "$srcdir/$_pn/$_rn/init.d/mdadm.rc" "$pkgdir/etc/init.d/mdadm"
	
	#install -Dm755 "$srcdir/$_rn/conf.d/mdraid.confd" "$pkgdir/etc/conf.d/mdraid"
	#install -Dm755 "$srcdir/$_rn/init.d/mdraid.rc" "$pkgdir/etc/init.d/mdraid"
}
sha256sums=('40fb88a39a857ebb281f78ea1f000eaeb823886a0dc8da6e15d1083e00ccfdd6')')
