# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="mdadm"
_ver=20130325

pkgname=openrc4arch-${_rn}-plugin
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc4arch-base')
depends=('openrc4arch' "${_rn}")
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/mdadm.confd" "$pkgdir/etc/conf.d/mdadm"
	install -Dm755 "$srcdir/${_rn}/init.d/mdadm.rc" "$pkgdir/etc/init.d/mdadm"
	
	#install -Dm755 "$srcdir/${_rn}/conf.d/mdraid.confd" "$pkgdir/etc/conf.d/mdraid"
	#install -Dm755 "$srcdir/${_rn}/init.d/mdraid.rc" "$pkgdir/etc/init.d/mdraid"
}
sha256sums=('434ef6f32edf70a34df4b81c9b6ea0431492d6b42ea5997e2182d1627d57c45f')
