# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="mysql"
_ver=20130325

pkgname=openrc4arch-${_rn}-plugin
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc4arch' "${_rn}")
provides=('openrc4arch-db')
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/init.d/mysql.init" "$pkgdir/etc/init.d/mysql"
}
sha256sums=('904b9482467937eacf0047e7a776262aba7b612d5c190b20806ff6e6445f02a5')
