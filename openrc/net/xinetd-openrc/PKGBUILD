# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=xinetd

pkgname=$_rn-openrc
pkgver=0.9.3
pkgrel=1
pkgdesc="OpenRC $_rn init scripts"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-net')
depends=('openrc' "$_rn")
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
	install -Dm755 "$srcdir/$_pn/$_rn/conf.d/xinetd.confd" "$pkgdir/etc/conf.d/xinetd"
	install -Dm755 "$srcdir/$_pn/$_rn/init.d/xinetd.rc6" "$pkgdir/etc/init.d/xinetd"
}
sha256sums=('5450ee90b46ac8104bf2ee2680b976c9eaa4f7b401b0b05c6ef6aebebba35510')
