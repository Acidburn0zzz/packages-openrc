svc="net.lo"
rlvl="boot"

post_install() {
	_cmd="rc-update add $svc $rlvl"
	$_cmd
	_cmd="rc-update add $svc-mount $rlvl"
	$_cmd
	rc-update -u
}

post_upgrade() {
	post_install "$1"
}

post_remove() {
	_cmd="rc-update del $svc $rlvl"
	$_cmd
	_cmd="rc-update del $svc-mount $rlvl"
	$_cmd
	rc-update -u
}
