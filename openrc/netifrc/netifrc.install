_svc="net.lo"
_rlvl="boot"

post_install() {
	_cmd="rc-update add ${_svc} ${_rlvl}"
	${_cmd}
	_cmd="rc-update add ${_svc}-mount ${_rlvl}"
	${_cmd}
	rc-update -u
}

post_upgrade() {
	post_install "$1"
}

post_remove() {
	_cmd="rc-update del ${_svc} ${_rlvl}"
	${_cmd}
	_cmd="rc-update del ${_svc}-mount ${_rlvl}"
	${_cmd}
	rc-update -u
}
