# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=ntp

pkgname=$_rn-openrc
pkgver=0.8.3
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "$_rn")
provides=('openrc-timed')
conflicts=('openrc-timed')
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
	install -Dm755 "$srcdir/$_pn/$_rn/conf.d/ntpd.confd" "$pkgdir/etc/conf.d/ntpd"
	install -Dm755 "$srcdir/$_pn/$_rn/init.d/ntpd.rc" "$pkgdir/etc/init.d/ntpd"
	
	install -Dm755 "$srcdir/$_pn/$_rn/conf.d/ntp-client.confd" "$pkgdir/etc/conf.d/ntp-client"
	install -Dm755 "$srcdir/$_pn/$_rn/init.d/ntp-client.rc" "$pkgdir/etc/init.d/ntp-client"
}
sha256sums=('076eba167d318ae9d4652fea87e6620ead22a301170e8f47e34821330f118a73')
