# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=ntp

pkgname=$_rn-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "$_rn")
provides=('openrc-timed')
conflicts=('openntpd-openrc')
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
	install -Dm755 "$srcdir/$_pn-$pkgver/$_rn/conf.d/ntpd.confd" "$pkgdir/etc/conf.d/ntpd"
	install -Dm755 "$srcdir/$_pn-$pkgver/$_rn/init.d/ntpd.rc" "$pkgdir/etc/init.d/ntpd"
	
	install -Dm755 "$srcdir/$_pn-$pkgver/$_rn/conf.d/ntp-client.confd" "$pkgdir/etc/conf.d/ntp-client"
	install -Dm755 "$srcdir/$_pn-$pkgver/$_rn/init.d/ntp-client.rc" "$pkgdir/etc/init.d/ntp-client"
}
sha256sums=('6bf73dc52a79200e95883491e60b227d02a7cd030f3f532374037c65d2a3d48d')
