# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=openntpd

pkgname=$_rn-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "$_rn")
provides=('openrc-timed')
conflicts=('ntp-openrc')
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
	install -Dm755 "$srcdir/$_pn-$pkgver/$_rn/conf.d/openntpd.conf.d-3.9_p1-r4" "$pkgdir/etc/conf.d/openntpd"
	install -Dm755 "$srcdir/$_pn-$pkgver/$_rn/init.d/openntpd.init.d-3.9_p1-r4" "$pkgdir/etc/init.d/openntpd"
}
sha256sums=('6bf73dc52a79200e95883491e60b227d02a7cd030f3f532374037c65d2a3d48d')
