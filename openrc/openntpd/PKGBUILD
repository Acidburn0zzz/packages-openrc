# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="openntpd"
_ver=20130325

pkgname=openrc4arch-${_rn}-plugin
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc4arch' "${_rn}")
provides=('openrc4arch-timed')
conflicts=('openrc4arch-ntp-plugin')
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/openntpd.conf.d-3.9_p1-r4" "$pkgdir/etc/conf.d/openntpd"
	install -Dm755 "$srcdir/${_rn}/init.d/openntpd.init.d-3.9_p1-r4" "$pkgdir/etc/init.d/openntpd"
}
sha256sums=('770c719cc1d92c3ef082dcea93c55b8888208beb26d7ac309c92453c5257a255')
