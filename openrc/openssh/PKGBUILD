# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="openssh"
_ver=20130325

pkgname=openrc4arch-${_rn}-plugin
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc4arch-misc')
depends=('openrc4arch' "${_rn}")
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/sshd.confd" "$pkgdir/etc/conf.d/sshd"
	install -Dm755 "$srcdir/${_rn}/init.d/sshd.rc6.4" "$pkgdir/etc/init.d/sshd"
}
sha256sums=('a229a64d03176771e32f0dd89109524f51d0f85e98a2e4824b78c9c60f346884')
