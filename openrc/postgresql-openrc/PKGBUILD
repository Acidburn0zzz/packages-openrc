# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn=postgresql
_ver=2.4

pkgname=$_rn-openrc
pkgver=0.2
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "$_rn")
provides=('openrc-db')
install=$_rn.install
source=("http://dev.gentoo.org/~titanofold/postgresql-initscript-$_ver.tbz2
")

package() {
	
	install -Dm755 "$srcdir/postgresql.confd" "$pkgdir/etc/conf.d/postgresql"

	install -Dm755 "$srcdir/postgresql.init" "$pkgdir/etc/init.d/postgresql"
		
	sed -e 's|#!/sbin/runscript|#!/usr/sbin/runscript|' -i "$pkgdir/etc/init.d/postgresql"
		
}
sha256sums=('4f17a2a26ec078b7f73d2b5fa7338402829fe195676d6c3f2cda6cd75c3d1e23')
