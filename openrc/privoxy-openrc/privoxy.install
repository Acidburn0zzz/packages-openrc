_service="privoxy"
_rlvl="default"

post_install() {
	_usr=$_service
	_grp=$_service
	echo "	==>  requires $_usr user"
	echo "	==>  requires $_grp group"
	_cmd="rc-update add $_service $_rlvl"
	echo "	==> run '$_cmd'"
}

post_upgrade() {
	post_install "$1"
}

post_remove() {
	_cmd="rc-update del $_service $_rlvl"
	echo "	==> run '$_cmd'"
}
