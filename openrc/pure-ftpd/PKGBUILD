# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="pure-ftpd"
_ver=20130325

pkgname=openrc4arch-${_rn}-plugin
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
provides=('openrc4arch-ftp')
depends=('openrc4arch' "${_rn}")
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/pure-ftpd.conf_d-3" "$pkgdir/etc/conf.d/pure-ftpd"
	install -Dm755 "$srcdir/${_rn}/init.d/pure-ftpd.rc11" "$pkgdir/etc/init.d/pure-ftpd"
}
sha256sums=('a5ec3904598c972212a1089bd8aeee290df8ad1ac216654e6910c705df1cbb77')
