# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=quota

pkgname=$_rn-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-misc')
depends=('openrc' "$_rn-tools")
install=$_rn-tools.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
	install -Dm755 "$srcdir/$_pn-$pkgver/$_rn/conf.d/quota.confd" "$pkgdir/etc/conf.d/quota"
	install -Dm755 "$srcdir/$_pn-$pkgver/$_rn/init.d/quota.rc7" "$pkgdir/etc/init.d/quota"
	
	#install -Dm755 "$srcdir/$_pn-$pkgver/$_rn/init.d/rpc.rquotad.initd" "$pkgdir/etc/init.d/rpc.rquotad"
}
sha256sums=('6bf73dc52a79200e95883491e60b227d02a7cd030f3f532374037c65d2a3d48d')
