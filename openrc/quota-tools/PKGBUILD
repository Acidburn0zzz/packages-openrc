# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="quota-tools"
_ver=20130325

pkgname=openrc4arch-${_rn}-plugin
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc4arch-misc')
depends=('openrc4arch' "${_rn}")
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/quota.confd" "$pkgdir/etc/conf.d/quota"
	install -Dm755 "$srcdir/${_rn}/init.d/quota.rc7" "$pkgdir/etc/init.d/quota"
	
	#install -Dm755 "$srcdir/${_rn}/init.d/rpc.rquotad.initd" "$pkgdir/etc/init.d/rpc.rquotad"
}
sha256sums=('85da45ec412938e391afc015032245ced3f98ae9ebecd885069199308c5fc034')
