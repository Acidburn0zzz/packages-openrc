# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="rsync"
_ver=20130325

pkgname=openrc4arch-${_rn}-plugin
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc4arch-misc')
depends=('openrc4arch' "${_rn}")
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/rsyncd.conf.d" "$pkgdir/etc/conf.d/rsyncd"
	install -Dm755 "$srcdir/${_rn}/init.d/rsyncd.init.d-r1" "$pkgdir/etc/init.d/rsyncd"
}
sha256sums=('b4c23698d4823c061f00ed733f923c8421b5cf087623d92234aad75b4ff8b1b6')
