if [ -f '/etc/conf.d/rsyslog-rc' ];then
	_service="rsyslog-rc"
else
	_service="rsyslog"
fi

	_rlvl="default"

post_install() {
	_cmd="rc-update add $_service $_rlvl"
	echo "	==> run '$_cmd'"
}

post_upgrade() {
	post_install "$1"
}

post_remove() {
	_cmd="rc-update del $_service $_rlvl"
	echo "	==> run '$_cmd'"
}
