# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=samba

pkgname=$_rn-openrc
pkgver=0.8.2
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-net')
depends=('openrc' "$_rn")
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")
		
package() {
	
	install -Dm755 "$srcdir/$_pn/$_rn/conf.d/samba4.confd" "$pkgdir/etc/conf.d/samba"

	install -Dm755 "$srcdir/$_pn/$_rn/init.d/samba4.initd-r1" "$pkgdir/etc/init.d/samba"

# 	install -Dm755 "$srcdir/$_pn/$_rn/conf.d/samba.confd" "$pkgdir/etc/conf.d/samba"
# 
# 	install -Dm755 "$srcdir/$_pn/$_rn/init.d/samba.initd" "$pkgdir/etc/init.d/samba"

}
sha256sums=('504f8ac9e162fa6182cb2e64f14074ecaed23c41ef7e31b33318d73f17ce8dc6')
