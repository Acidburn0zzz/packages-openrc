if [ -f '/etc/conf.d/squid-rc' ];then
	_service="squid-rc"
else
	_service="squid"
fi

_rlvl="default"

post_install() {
	_cmd="rc-update add $_service $_rlvl"
	echo "	==> run '$_cmd'"
}

post_upgrade() {
	post_install "$1"
}

post_remove() {
	_cmd="rc-update del $_service $_rlvl"
	echo "	==> run '$_cmd'"
}
