# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=subversion

pkgname=$_rn-openrc
pkgver=0.9.2
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-net')
depends=('openrc' "$_rn")
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
		install -Dm755 "$srcdir/$_pn/$_rn/conf.d/svnserve.confd" "$pkgdir/etc/conf.d/svnserve-rc"
		install -Dm755 "$srcdir/$_pn/$_rn/init.d/svnserve.initd2" "$pkgdir/etc/init.d/svnserve-rc"
}
sha256sums=('7f798793e431ab873f9677dc30560251d23aeb812da941f8c034ba6bddc3c0c7')
