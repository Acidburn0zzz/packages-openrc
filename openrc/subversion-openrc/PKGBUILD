# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=subversion

pkgname=$_rn-openrc
pkgver=0.8
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-net')
depends=('openrc' "$_rn")
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
		install -Dm755 "$srcdir/$_pn/$_rn/conf.d/svnserve.confd" "$pkgdir/etc/conf.d/svnserve"
		install -Dm755 "$srcdir/$_pn/$_rn/init.d/svnserve.initd2" "$pkgdir/etc/init.d/svnserve"
}
sha256sums=('ff3bc32edc3e522f5788a7f0ca293c4d63d649156b0ce166d59633cc784acf7e')
