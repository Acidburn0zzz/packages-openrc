# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=syslog-ng

pkgname=$_rn-openrc
pkgver=0.9.3
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "$_rn")
groups=('openrc-misc')
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {
install -Dm755 "$srcdir/$_pn/$_rn/conf.d/syslog-ng.confd" "$pkgdir/etc/conf.d/syslog-ng"
install -Dm755 "$srcdir/$_pn/$_rn/init.d/syslog-ng.rc6.3.3" "$pkgdir/etc/init.d/syslog-ng"
}
sha256sums=('5450ee90b46ac8104bf2ee2680b976c9eaa4f7b401b0b05c6ef6aebebba35510') 
