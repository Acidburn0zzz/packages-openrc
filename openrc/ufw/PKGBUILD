# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="ufw"
_ver=20130325

pkgname=openrc4arch-ufw-plugin
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc4arch-misc')
depends=('openrc4arch' "${_rn}")
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")
sha256sums=('a6ff13d2b3727f3b02d319eddda79f11d8d040e52be497b140d60d3a221ae677')

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/ufw.confd" "$pkgdir/etc/conf.d/ufw"
	install -Dm755 "$srcdir/${_rn}/init.d/ufw-2.initd" "$pkgdir/etc/init.d/ufw"
}
