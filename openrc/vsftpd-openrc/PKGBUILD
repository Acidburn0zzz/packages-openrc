# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=vsftpd

pkgname=$_rn-openrc
pkgver=0.9.4
pkgrel=1
pkgdesc="OpenRC $_rn init scripts"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-net')
depends=('openrc' "$_rn")
optdepends=('bind-openrc')
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz"
		"http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/net-ftp/vsftpd/files/vsftpd-checkconfig.sh")

package() {
	install -Dm755 "$srcdir/$_pn/$_rn/init.d/vsftpd.init" "$pkgdir/etc/init.d/vsftpd"
	
	install -Dm755 "$srcdir/vsftpd-checkconfig.sh" "$pkgdir/usr/lib/vsftpd-checkconfig.sh"
	
	sed -e 's|/etc/vsftpd/vsftpd.conf|/etc/vsftpd.conf|g' -i "$pkgdir/usr/lib/vsftpd-checkconfig.sh"
}
sha256sums=('40fb88a39a857ebb281f78ea1f000eaeb823886a0dc8da6e15d1083e00ccfdd6'
            '2de7c7c1edfe3ae0480e22d988a564db3bb873050929ebb6e8361d7a1288ddda')
