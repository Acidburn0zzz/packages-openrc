# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=wpa_supplicant

pkgname=$_rn-openrc
pkgver=0.1
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "$_rn")
provides=('openrc-wireless')
conflicts=('netcfg-openrc')
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")
sha256sums=('4bd600d77e344a604c9ff751613a31bf65395c6cc0a97083a76d19b3b8cdb39a')

package() {
	install -Dm755 "$srcdir/$_pn/$_rn/conf.d/wpa_supplicant-conf.d" "$pkgdir/etc/conf.d/wpa_supplicant"
	install -Dm755 "$srcdir/$_pn/$_rn/init.d/wpa_supplicant-init.d" "$pkgdir/etc/init.d/wpa_supplicant"
}
