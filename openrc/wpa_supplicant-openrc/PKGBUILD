# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=wpa_supplicant

pkgname=$_rn-openrc
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc' "$_rn")
provides=('openrc-wireless')
conflicts=('netcfg-openrc')
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")
sha256sums=('3887e0a3dceae9bff4f1ccb180d76391d0420fd711e2607d4cabaafe57ddc716')

package() {
	install -Dm755 "$srcdir/$_pn-$pkgver/$_rn/conf.d/wpa_supplicant-conf.d" "$pkgdir/etc/conf.d/wpa_supplicant"
	install -Dm755 "$srcdir/$_pn-$pkgver/$_rn/init.d/wpa_supplicant-init.d" "$pkgdir/etc/init.d/wpa_supplicant"
}
