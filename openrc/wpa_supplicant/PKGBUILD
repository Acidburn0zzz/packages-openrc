# Maintainer: udeved <udeved@openrc4arch.site40.net>

_rn="wpa_supplicant"
_ver=20130325

pkgname=openrc4arch-${_rn}-plugin
pkgver=1.1.1
pkgrel=1
pkgdesc="OpenRC ${_rn} init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
depends=('openrc4arch' "${_rn}")
provides=('openrc4arch-wireless')
conflicts=('openrc4arch-netcfg-plugin')
install=${_rn}.install
source=("http://openrc4arch.site40.net/pool/archlinux/${_rn}-${_ver}.tar.xz")
sha256sums=('6346bca5fedc7e13fe0ff1eaf1d7cd4ba455a393689bd1f3c97e0814557f6dd2')

package() {
	install -Dm755 "$srcdir/${_rn}/conf.d/wpa_supplicant-conf.d" "$pkgdir/etc/conf.d/wpa_supplicant"
	install -Dm755 "$srcdir/${_rn}/init.d/wpa_supplicant-init.d" "$pkgdir/etc/init.d/wpa_supplicant"
}
