# Maintainer: udeved <udeved@openrc4arch.site40.net>

_pn=openrc-plugins
_rn=ypserv

pkgname=$_rn-openrc
pkgver=0.9.4
pkgrel=1
pkgdesc="OpenRC $_rn init script"
arch=('any')
url="http://openrc4arch.site40.net"
license=('GPL2')
groups=('openrc-net')
depends=('openrc' "$_rn" 'rpcbind-openrc')
install=$_rn.install
source=("$url/pool/archlinux/$_pn-$pkgver.tar.xz")

package() {

		install -Dm755 "$srcdir/$_pn/$_rn/conf.d/rpc.yppasswdd.confd" "$pkgdir/etc/conf.d/rpc.yppasswdd"
		install -Dm755 "$srcdir/$_pn/$_rn/init.d/rpc.yppasswdd-r1" "$pkgdir/etc/init.d/rpc.yppasswdd"
		
		install -Dm755 "$srcdir/$_pn/$_rn/conf.d/rpc.ypxfrd.confd" "$pkgdir/etc/conf.d/rpc.ypxfrd"
		install -Dm755 "$srcdir/$_pn/$_rn/init.d/rpc.ypxfrd-2.23" "$pkgdir/etc/init.d/rpc.ypxfrd"
		
		install -Dm755 "$srcdir/$_pn/$_rn/conf.d/ypserv.confd" "$pkgdir/etc/conf.d/ypserv.confd"	
		install -Dm755 "$srcdir/$_pn/$_rn/init.d/ypserv" "$pkgdir/etc/init.d/ypserv"
}
sha256sums=('40fb88a39a857ebb281f78ea1f000eaeb823886a0dc8da6e15d1083e00ccfdd6')
