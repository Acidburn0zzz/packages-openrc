. ./functions

if [[ -e '/etc/lsb-release' ]];then
	. /etc/lsb-release
else
	DISTRIB_ID="unknown"
fi

VER=0.7
PKGNAME='openrc-plugins'
EXT="xz"

main(){	
	set_prefix
	setup "confd.list" "conf.d"
	setup "initd.list" "init.d"
	mk_tar
}

main
