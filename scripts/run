if [[ -e '/etc/lsb-release' ]];then
	. /etc/lsb-release
else
	DISTRIB_ID="unknown"
fi

. ./functions

VER=$(date +"%Y%m%d") #0.9.4
PKGNAME="openrc-init-scripts"
EXT="xz"

main(){	
	set_prefix
	setup "confd.list" "conf.d"
	setup "initd.list" "init.d"
	set_version
	mk_tar
}

main
