#!/usr/bin/runscript

PID=/run/${SVCNAME}.pid
CMD=/usr/bin/${SVCNAME}

depend() {
	need dbus
}

start() {
	ebegin "Starting ${SVCNAME}"
	start-stop-daemon --start --background --exec "${CMD}" --make-pidfile --pidfile "${PID}" -- "${ARGS}"
	eend $?
}

stop() {
	ebegin "Stopping ${SVCNAME}"
	start-stop-daemon --stop --quiet --exec "${CMD}" --pidfile "${PID}"
	eend $?
}
