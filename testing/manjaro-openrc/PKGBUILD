# Maintainer: Your Name <youremail@domain.com>

pkgname=manjaro-openrc
pkgver=0.8.10
pkgrel=1
pkgdesc="majaro openrc support"
arch=('any')
url="https://github.com/udeved"
license=('GPL')
groups=('openrc' 'openrc-base')
depends=('openrc-core' 'dbus-openrc')
optdepends=('displaymanager-openrc: DM initscript')
provides=('manjaro-openrc')
conflicts=('manjaro-openrc')
install=manjaro.install
source=('initd.keyboardctl'
		'confd.keyboardctl')

package() {
	install -Dm755 $srcdir/confd.keyboardctl $pkgdir/etc/conf.d/keyboardctl
	install -Dm755 $srcdir/initd.keyboardctl $pkgdir/etc/init.d/keyboardctl
}
