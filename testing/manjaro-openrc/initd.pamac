#!/usr/bin/runscript

PID=/run/pamac.pid
CMD=/usr/bin/pamac-daemon

depend() {
	need dbus
	use consolekit
}

start() {
	ebegin "Starting ${SVCNAME}"
	start-stop-daemon --start --background --exec $CMD --make-pidfile --pidfile $PID
	eend $?
}

stop() {
	ebegin "Stopping ${SVCNAME}"
	start-stop-daemon --stop --quiet --exec $CMD --pidfile $PID
	eend $?
}
